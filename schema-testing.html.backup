<!DOCTYPE html>
<html>
<head>
    <title>Schema Markup Testing Tool</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        .test-result { margin: 10px 0; padding: 10px; border: 1px solid #ddd; }
        .valid { background: #d4edda; }
        .invalid { background: #f8d7da; }
    </style>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-FB947JWCFT"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-FB947JWCFT');
    </script>
</head>
<body>
    <h1>Schema Markup Validator</h1>
    <button onclick="testSchemas()">Test All Schemas</button>
    <div id="results"></div>

    <script>
    async function testSchemas() {
        const schemas = document.querySelectorAll('script[type="application/ld+json"]');
        const results = document.getElementById('results');
        results.innerHTML = '';

        schemas.forEach((schema, index) => {
            try {
                const data = JSON.parse(schema.textContent);
                const div = document.createElement('div');
                div.className = 'test-result valid';
                div.innerHTML = `✅ Schema ${index + 1}: Valid ${data['@type']}`;
                results.appendChild(div);
            } catch (e) {
                const div = document.createElement('div');
                div.className = 'test-result invalid';
                div.innerHTML = `❌ Schema ${index + 1}: Invalid - ${e.message}`;
                results.appendChild(div);
            }
        });

        // Test with Google's API
        const url = 'https://search.google.com/structured-data/testing-tool';
        console.log('Test your schemas at:', url);
    }
    </script>
<script src="/js/emergency-fixes-loader.js"></script>
<script type="module" src="/js/modules/index.js"></script>
</body>
</html>
