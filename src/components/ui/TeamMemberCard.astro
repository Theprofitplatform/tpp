---
/**
 * TeamMemberCard Component
 * Individual team member card with photo, bio, social links, and expertise tags
 * Features circular gradient border, hover effects, and accessible social links
 *
 * Props:
 * - member: TeamMember object with name, role, bio, photo, social, expertise, funFact
 */

interface TeamMember {
  name: string;
  role: string;
  bio: string;
  photo?: string;
  social?: {
    linkedin?: string;
    twitter?: string;
    email?: string;
  };
  expertise?: string[];
  funFact?: string;
}

interface Props {
  member: TeamMember;
  index?: number;
}

const { member, index = 0 } = Astro.props;
---

<article
  class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100 overflow-hidden animate-fade-in"
  style={`animation-delay: ${index * 150}ms`}
  role="listitem"
>
  <!-- Photo Container with Circular Gradient Border -->
  <div class="relative p-6 bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50">
    <div class="relative w-48 h-48 mx-auto">
      <!-- Gradient Border Ring -->
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600 rounded-full animate-spin-slow" aria-hidden="true"></div>

      <!-- Photo Container -->
      <div class="absolute inset-1 bg-white rounded-full overflow-hidden">
        {member.photo ? (
          <img
            src={member.photo}
            alt={`${member.name}, ${member.role}`}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            loading="lazy"
          />
        ) : (
          <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-indigo-500 via-purple-600 to-pink-600">
            <span class="text-7xl font-black text-white" aria-hidden="true">{member.name.charAt(0)}</span>
          </div>
        )}
      </div>
    </div>

    <!-- Social Links (Visible on Photo) -->
    {member.social && (
      <div class="absolute top-6 right-6 flex flex-col gap-2 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-4 group-hover:translate-x-0">
        {member.social.linkedin && (
          <a
            href={member.social.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-white rounded-full flex items-center justify-center hover:bg-indigo-600 hover:text-white transition-colors duration-200 shadow-lg"
            aria-label={`${member.name}'s LinkedIn profile`}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
            </svg>
          </a>
        )}
        {member.social.twitter && (
          <a
            href={member.social.twitter}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-white rounded-full flex items-center justify-center hover:bg-purple-600 hover:text-white transition-colors duration-200 shadow-lg"
            aria-label={`${member.name}'s Twitter profile`}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
            </svg>
          </a>
        )}
        {member.social.email && (
          <a
            href={`mailto:${member.social.email}`}
            class="w-10 h-10 bg-white rounded-full flex items-center justify-center hover:bg-pink-600 hover:text-white transition-colors duration-200 shadow-lg"
            aria-label={`Email ${member.name}`}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </a>
        )}
      </div>
    )}
  </div>

  <!-- Content -->
  <div class="p-6 lg:p-8">
    <h3 class="text-2xl font-bold mb-2 text-gray-900 group-hover:text-indigo-600 transition-colors duration-200">
      {member.name}
    </h3>
    <p class="text-indigo-600 font-semibold mb-4 text-sm uppercase tracking-wide">
      {member.role}
    </p>
    <p class="text-gray-600 leading-relaxed mb-4">
      {member.bio}
    </p>

    <!-- Expertise Tags -->
    {member.expertise && member.expertise.length > 0 && (
      <div class="mb-4">
        <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Expertise</p>
        <div class="flex flex-wrap gap-2">
          {member.expertise.map((skill) => (
            <span class="px-3 py-1 bg-gradient-to-r from-indigo-100 to-purple-100 text-indigo-700 rounded-full text-xs font-medium">
              {skill}
            </span>
          ))}
        </div>
      </div>
    )}

    <!-- Fun Fact -->
    {member.funFact && (
      <div class="pt-4 border-t border-gray-100">
        <p class="text-sm text-gray-500 italic">
          <span class="font-semibold text-purple-600">Fun fact:</span> {member.funFact}
        </p>
      </div>
    )}
  </div>
</article>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
    opacity: 0;
  }

  .animate-spin-slow {
    animation: spin-slow 8s linear infinite;
  }

  /* Ensure smooth transitions on all hover states */
  article {
    will-change: transform, box-shadow;
  }

  /* Improve image loading appearance */
  img {
    background: linear-gradient(135deg, #e0e7ff 0%, #ede9fe 50%, #fce7f3 100%);
  }

  /* Pause gradient rotation on hover for better UX */
  article:hover .animate-spin-slow {
    animation-play-state: paused;
  }

  /* Enhanced focus states for accessibility */
  article:focus-within {
    outline: 3px solid #6366f1;
    outline-offset: 4px;
  }
</style>