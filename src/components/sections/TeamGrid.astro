    },
    {
      name: "Marketing Team Lead",
      role: "Senior SEO Specialist",
      bio: "Technical SEO expert with a track record of ranking Sydney businesses on page 1. Passionate about turning organic search into qualified leads.",
      photo: "/images/team/placeholder.jpg",
      social: {
        linkedin: "#"
      },
