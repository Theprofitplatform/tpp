---

<section class="py-20 md:py-32" aria-labelledby="team-heading">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2
          id="team-heading"
          class="text-4xl md:text-5xl font-black mb-6 bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent"
        >
          {title}
        </h2>
        {subtitle && (
          <p class="text-xl md:text-2xl text-gray-700 font-medium max-w-3xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>

      <!-- Team Grid using TeamMemberCard component -->
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10"
        role="list"
      >
        {members.map((member, index) => (
          <TeamMemberCard member={member} index={index} />
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  /* TeamGrid wrapper styles - card styles now handled by TeamMemberCard component */
</style>