---
/**
 * TeamGrid Component
 * Displays team members in a responsive grid layout using TeamMemberCard component
 * Features hover effects, animations, and accessibility support
 * Layout: 1 column mobile, 2 columns tablet, 3 columns desktop
 *
 * Data structure for team members:
 * members = [
 *   {
 *     name: "Full Name",
 *     role: "Job Title",
 *     bio: "Short bio (2-3 sentences)",
 *     photo: "/images/team/photo.jpg",
 *     social: { linkedin: "url", twitter: "url", email: "email" },
 *     expertise: ["Skill 1", "Skill 2", "Skill 3"],
 *     funFact: "Optional fun fact about team member"
 *   }
 * ]
 */

import TeamMemberCard from '../ui/TeamMemberCard.astro';

interface TeamMember {
  name: string;
  role: string;
  bio: string;
  photo?: string;
  social?: {
    linkedin?: string;
    twitter?: string;
    email?: string;
  };
  expertise?: string[];
  funFact?: string;
}

interface Props {
  members?: TeamMember[];
  title?: string;
  subtitle?: string;
}

const {
  members = [
    // PLACEHOLDER DATA - Replace with actual team information
    {
      name: "Avi Cohen",
      role: "Founder & Digital Strategist",
      bio: "15+ years driving digital growth for Sydney businesses. Specializes in SEO, conversion optimization, and data-driven marketing strategies.",
      photo: "/images/team/avi.jpg",
      social: {
        linkedin: "https://linkedin.com/in/avicohen",
        email: "avi@theprofitplatform.com.au"
      },
      expertise: ["SEO Strategy", "Conversion Optimization", "Digital Analytics"],
