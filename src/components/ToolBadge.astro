---
/**
 * ToolBadge Component
 * Professional badge for tool headers (replaces emojis)
 */
interface Props {
  type: 'free' | 'new' | 'popular' | 'beta' | 'premium';
  icon?: string;
  text?: string;
}

const { type, icon, text } = Astro.props;

const badgeConfig = {
  free: {
    icon: icon || 'fa-gift',
    text: text || 'Free Tool',
    gradient: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)',
    color: 'white',
    shadow: '0 4px 12px rgba(102, 126, 234, 0.4)'
  },
  new: {
    icon: icon || 'fa-sparkles',
    text: text || 'NEW',
    gradient: 'linear-gradient(135deg, #10b981 0%, #059669 100%)',
    color: 'white',
    shadow: '0 4px 12px rgba(16, 185, 129, 0.4)'
  },
  popular: {
    icon: icon || 'fa-star',
    text: text || 'Most Popular',
    gradient: 'linear-gradient(135deg, #f59e0b 0%, #d97706 100%)',
    color: 'white',
    shadow: '0 4px 12px rgba(245, 158, 11, 0.4)'
  },
  beta: {
    icon: icon || 'fa-flask',
    text: text || 'Beta',
    gradient: 'linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%)',
    color: 'white',
    shadow: '0 4px 12px rgba(139, 92, 246, 0.4)'
  },
  premium: {
    icon: icon || 'fa-crown',
    text: text || 'Premium',
    gradient: 'linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%)',
    color: '#78350f',
    shadow: '0 4px 12px rgba(251, 191, 36, 0.4)'
  }
};

const config = badgeConfig[type];
---

<span
  class="tool-badge"
  style={`background: ${config.gradient}; color: ${config.color}; box-shadow: ${config.shadow};`}
>
  <i class={`fas ${config.icon}`}></i>
  <span class="badge-text">{config.text}</span>
</span>

<style>
  .tool-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.25rem;
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }

  .tool-badge:hover {
    transform: scale(1.05);
  }

  .tool-badge i {
    font-size: 1rem;
  }

  .badge-text {
    white-space: nowrap;
  }

  @media (max-width: 480px) {
    .tool-badge {
      font-size: 0.8125rem;
      padding: 0.4rem 1rem;
    }

    .tool-badge i {
      font-size: 0.9rem;
    }
  }
</style>
