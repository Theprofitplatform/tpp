---
// BaseLayout.astro - Ready for future componentization (optional)
export interface Props {
  title?: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title || "The Profit Platform - Sydney Digital Marketing"}</title>

  <!-- Production-ready CSS -->
  <link rel="stylesheet" href="/css/critical.min.css">
  <link rel="stylesheet" href="/css/style.min.css">

  <!-- External resources -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
  <slot />

  <!-- Production-ready JS -->
  <script is:inline src="/js/combined.min.js" defer></script>
  <script is:inline src="/js/main.js" defer></script>
</body>
</html>