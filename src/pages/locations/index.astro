---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const pageTitle = "Locations | The Profit Platform";
const pageDescription = "Digital marketing services across Australia. Find The Profit Platform in Sydney, Melbourne, Brisbane, Perth, and more major cities.";

// Get all locations
const allLocations = await getCollection('locations', ({ data }) => {
  return !data.draft;
});

// Sort locations - featured first, then alphabetically
const locations = allLocations.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return a.data.city.localeCompare(b.data.city);
});
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="min-h-screen">
    <!-- Header -->
    <div class="bg-gradient-to-br from-indigo-600 to-purple-700 text-white py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl font-bold mb-6">Our Locations Across Australia</h1>
          <p class="text-xl opacity-90">
            Digital marketing services available in major cities nationwide. Local expertise with national reach.
          </p>
        </div>
      </div>
    </div>

    <!-- Locations Grid -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {locations.map((location) => (
              <a href={`/locations/${location.slug}`} class="group">
                <div class="bg-white border-2 border-gray-200 rounded-2xl p-8 hover:border-indigo-500 hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 h-full flex flex-col">
                  {location.data.featured && (
                    <span class="inline-block bg-indigo-100 text-indigo-600 text-xs font-semibold px-3 py-1 rounded-full mb-4 w-fit">
                      FEATURED
                    </span>
                  )}

                  <div class="flex items-start justify-between mb-4">
                    <div>
                      <h3 class="text-3xl font-bold mb-2 group-hover:text-indigo-600 transition-colors">
                        {location.data.city}
                      </h3>
                      <p class="text-gray-500 font-medium">
                        {location.data.state}, {location.data.country}
                      </p>
                    </div>
                    <div class="text-4xl">
                      üìç
                    </div>
                  </div>

                  <p class="text-gray-600 mb-6 flex-grow line-clamp-3">
                    {location.data.description}
                  </p>

                  {location.data.serviceAreas.length > 0 && (
                    <div class="mb-6">
                      <p class="text-sm font-semibold text-gray-700 mb-2">Service Areas:</p>
                      <div class="flex flex-wrap gap-2">
                        {location.data.serviceAreas.slice(0, 4).map((area) => (
                          <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded">
                            {area}
                          </span>
                        ))}
                        {location.data.serviceAreas.length > 4 && (
                          <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded">
                            +{location.data.serviceAreas.length - 4} more
                          </span>
                        )}
                      </div>
                    </div>
                  )}

                  {(location.data.phone || location.data.email) && (
                    <div class="border-t border-gray-200 pt-4 space-y-2">
                      {location.data.phone && (
                        <p class="text-sm text-gray-600">
                          <span class="font-semibold">Phone:</span> {location.data.phone}
                        </p>
                      )}
                      {location.data.email && (
                        <p class="text-sm text-gray-600">
                          <span class="font-semibold">Email:</span> {location.data.email}
                        </p>
                      )}
                    </div>
                  )}

                  <div class="mt-6 flex items-center text-indigo-600 font-semibold group-hover:translate-x-2 transition-transform">
                    View {location.data.city} Services ‚Üí
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-4xl font-bold mb-6">Don't See Your City?</h2>
          <p class="text-xl text-gray-600 mb-8">
            We work with businesses across Australia. Get in touch to discuss how we can help your business grow.
          </p>
          <a href="/contact" class="inline-block bg-indigo-600 text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-indigo-700 transition-colors shadow-lg">
            Contact Us Today
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
