---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const pageTitle = "Locations | The Profit Platform";
const pageDescription = "Digital marketing services across Australia. Find The Profit Platform in Sydney, Melbourne, Brisbane, Perth, and more major cities.";

// Get all locations
const allLocations = await getCollection('locations', ({ data }) => {
  return !data.draft;
});

// Sort locations - featured first, then alphabetically
const locations = allLocations.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return a.data.city.localeCompare(b.data.city);
});

const featuredLocations = locations.filter(loc => loc.data.featured);
const otherLocations = locations.filter(loc => !loc.data.featured);
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="locations-page">

    <!-- Hero Section with Animated Background -->
    <section class="hero-locations">
      <div class="hero-bg-pattern"></div>
      <div class="hero-glow"></div>

      <div class="container">
        <div class="hero-content">
          <div class="hero-badge">
            <i class="fas fa-map-marker-alt"></i>
            <span>Serving Australia Nationwide</span>
          </div>

          <h1 class="hero-title">
            <span class="title-line">Digital Marketing Services</span>
            <span class="title-gradient">Across Australia</span>
          </h1>

          <p class="hero-subtitle">
            Local expertise with <strong>national reach</strong>. Partner with a team that understands your market and drives real results.
          </p>

          <div class="hero-stats">
            <div class="stat-item">
              <div class="stat-number">{locations.length}+</div>
              <div class="stat-label">Cities Served</div>
            </div>
            <div class="stat-divider"></div>
            <div class="stat-item">
              <div class="stat-number">500+</div>
              <div class="stat-label">Local Businesses</div>
            </div>
            <div class="stat-divider"></div>
            <div class="stat-item">
              <div class="stat-number">5â˜…</div>
              <div class="stat-label">Rated Service</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Locations -->
    {featuredLocations.length > 0 && (
      <section class="featured-locations">
        <div class="container">
          <div class="section-header">
            <h2 class="section-title">Featured Locations</h2>
            <p class="section-subtitle">Our primary service hubs with dedicated local teams</p>
          </div>

          <div class="featured-grid">
            {featuredLocations.map((location) => (
              <a href={`/locations/${location.slug}`} class="featured-card">
                <div class="card-glow"></div>

                <div class="card-icon">
                  <i class="fas fa-map-pin"></i>
                </div>

                <div class="card-content">
                  <div class="card-header">
                    <h3 class="card-city">{location.data.city}</h3>
                    <span class="card-badge">Featured</span>
                  </div>

                  <p class="card-location">{location.data.state}, {location.data.country}</p>
                  <p class="card-description">{location.data.description}</p>

                  {location.data.serviceAreas.length > 0 && (
                    <div class="service-areas">
                      <div class="area-label">
                        <i class="fas fa-location-dot"></i>
                        <span>Coverage Areas</span>
                      </div>
                      <div class="area-tags">
                        {location.data.serviceAreas.slice(0, 3).map((area) => (
                          <span class="area-tag">{area}</span>
                        ))}
                        {location.data.serviceAreas.length > 3 && (
                          <span class="area-tag-more">+{location.data.serviceAreas.length - 3}</span>
                        )}
                      </div>
                    </div>
                  )}

                  <div class="card-footer">
                    <div class="contact-info">
                      {location.data.phone && (
                        <div class="contact-item">
                          <i class="fas fa-phone"></i>
                          <span>{location.data.phone}</span>
                        </div>
                      )}
                    </div>
                    <div class="card-arrow">
                      <span>View Details</span>
                      <i class="fas fa-arrow-right"></i>
                    </div>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- All Locations -->
    <section class="all-locations">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">All Service Locations</h2>
          <p class="section-subtitle">Choose your city to learn about our local services</p>
        </div>

        <div class="locations-grid">
          {otherLocations.map((location) => (
            <a href={`/locations/${location.slug}`} class="location-card">
              <div class="card-inner">
                <div class="location-icon">
                  <i class="fas fa-building"></i>
                </div>

                <div class="location-info">
                  <h3 class="location-name">{location.data.city}</h3>
                  <p class="location-region">{location.data.state}</p>
                </div>

                <div class="location-arrow">
                  <i class="fas fa-chevron-right"></i>
                </div>
              </div>

              {location.data.serviceAreas.length > 0 && (
                <div class="location-areas">
                  <p class="areas-count">
                    <i class="fas fa-map-marked-alt"></i>
                    {location.data.serviceAreas.length} service areas
                  </p>
                </div>
              )}
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Interactive Map Placeholder -->
    <section class="map-section">
      <div class="container">
        <div class="map-container">
          <div class="map-overlay">
            <div class="map-content">
              <i class="fas fa-map-location-dot"></i>
              <h3>Interactive Map Coming Soon</h3>
              <p>Explore our service locations on an interactive map</p>
            </div>
          </div>
          <div class="map-placeholder">
            <div class="map-grid"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Not Listed CTA -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-card">
          <div class="cta-icon">
            <i class="fas fa-location-crosshairs"></i>
          </div>

          <div class="cta-content">
            <h2 class="cta-title">Don't See Your City?</h2>
            <p class="cta-description">
              We work with businesses across <strong>all of Australia</strong>. Distance is no barrier to delivering exceptional digital marketing results.
            </p>
          </div>

          <div class="cta-actions">
            <a href="/contact" class="cta-button primary">
              <span>Get In Touch</span>
              <i class="fas fa-arrow-right"></i>
            </a>
            <a href="tel:+61487286451" class="cta-button secondary">
              <i class="fas fa-phone"></i>
              <span>Call Now</span>
            </a>
          </div>
        </div>

        <!-- Trust Signals -->
        <div class="trust-signals">
          <div class="trust-item">
            <i class="fas fa-shield-check"></i>
            <span>100% Australian Owned</span>
          </div>
          <div class="trust-item">
            <i class="fas fa-headset"></i>
            <span>Local Support Team</span>
          </div>
          <div class="trust-item">
            <i class="fas fa-chart-line"></i>
            <span>Proven Track Record</span>
          </div>
          <div class="trust-item">
            <i class="fas fa-award"></i>
            <span>Award-Winning Service</span>
          </div>
        </div>
      </div>
    </section>

  </main>
</BaseLayout>

<style>
