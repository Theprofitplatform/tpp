---
// Components Showcase - Living Style Guide for The Profit Platform
// This page displays all UI elements and sections used across the site
import BaseLayout from '../layouts/BaseLayout.astro';
import NavigationSection from '../components/sections/NavigationSection.astro';
import HeroSection from '../components/sections/HeroSection.astro';
import TrustedBySection from '../components/sections/TrustedBySection.astro';
import ProofSection from '../components/sections/ProofSection.astro';
import ServicesSection from '../components/sections/ServicesSection.astro';
import ProcessSection from '../components/sections/ProcessSection.astro';
import PricingSection from '../components/sections/PricingSection.astro';
import FAQSection from '../components/sections/FAQSection.astro';
import ContactSection from '../components/sections/ContactSection.astro';
import FooterSection from '../components/sections/FooterSection.astro';
---

<BaseLayout title="UI Components Showcase — The Profit Platform Design System">
  <!-- Enhanced SEO Meta Tags -->
  <Fragment slot="head">
    <!-- Primary Meta Tags -->
    <meta name="title" content="UI Components Showcase — The Profit Platform Design System">
    <meta name="description" content="Living style guide showcasing all UI components and design elements used across The Profit Platform website.">
    <meta name="robots" content="noindex, nofollow">

    <!-- Performance Hints -->
    <link rel="preload" href="https://storage.googleapis.com/msgsndr/El8AYzrtJG3nVg76QPpa/media/68b56f6e09148075ab5016df.png" as="image" fetchpriority="high">
  </Fragment>

  <NavigationSection />

  <!-- Main Content -->
  <main id="components-showcase" role="main">
    <!-- Showcase Header -->
    <section class="showcase-header section">
      <div class="container">
        <div class="showcase-intro">
          <h1 class="showcase-title">UI Components Showcase</h1>
          <p class="showcase-subtitle">Living style guide and design system for The Profit Platform</p>
          <div class="showcase-meta">
            <span class="showcase-version">Version 1.0</span>
            <span class="showcase-updated">Last updated: September 2024</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Table of Contents -->
    <section class="toc-section section-small">
      <div class="container">
        <h2 class="section-title">Quick Navigation</h2>
        <div class="toc-grid">
          <div class="toc-column">
            <h3>Atomic Elements</h3>
            <ul class="toc-list">
              <li><a href="#typography">Typography</a></li>
              <li><a href="#colors">Color Palette</a></li>
              <li><a href="#buttons">Buttons</a></li>
              <li><a href="#forms">Form Elements</a></li>
              <li><a href="#icons">Icons</a></li>
            </ul>
          </div>
          <div class="toc-column">
            <h3>Components</h3>
            <ul class="toc-list">
              <li><a href="#hero">Hero Section</a></li>
              <li><a href="#trusted-by">Trust Signals</a></li>
              <li><a href="#proof">Social Proof</a></li>
              <li><a href="#services">Services</a></li>
              <li><a href="#process">Process Steps</a></li>
            </ul>
          </div>
          <div class="toc-column">
            <h3>Sections</h3>
            <ul class="toc-list">
              <li><a href="#pricing">Pricing</a></li>
              <li><a href="#faq">FAQ</a></li>
              <li><a href="#contact">Contact</a></li>
              <li><a href="#footer">Footer</a></li>
              <li><a href="#navigation">Navigation</a></li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Typography Section -->
    <section id="typography" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">Typography</h2>
          <p class="showcase-description">Heading styles and text formatting used across the site</p>

          <div class="typography-examples">
            <div class="typography-item">
              <h1 class="example-h1">Heading 1 - Hero Headlines</h1>
              <code>.hero-title, h1</code>
            </div>

            <div class="typography-item">
              <h2 class="example-h2">Heading 2 - Section Titles</h2>
              <code>.section-title, h2</code>
            </div>

            <div class="typography-item">
              <h3 class="example-h3">Heading 3 - Subsections</h3>
              <code>.subsection-title, h3</code>
            </div>

            <div class="typography-item">
              <h4 class="example-h4">Heading 4 - Card Titles</h4>
              <code>.card-title, h4</code>
            </div>

            <div class="typography-item">
              <p class="example-paragraph">
                Body text paragraph with <strong>bold emphasis</strong> and <em>italic text</em>.
                This represents the standard text content used throughout the website for descriptions,
                articles, and general content areas.
              </p>
              <code>p, .body-text</code>
            </div>

            <div class="typography-item">
              <p class="example-lead">
                Lead paragraph text - slightly larger and used for introductory content and subtitles.
              </p>
              <code>.lead-text, .section-subtitle</code>
            </div>

            <div class="typography-item">
              <blockquote class="example-blockquote">
                "The Profit Platform transformed our digital presence completely.
                We're now getting 3x more leads every month!"
                <cite>— Sarah Johnson, Local Business Owner</cite>
              </blockquote>
              <code>blockquote</code>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Color Palette Section -->
    <section id="colors" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">Color Palette</h2>
          <p class="showcase-description">Brand colors and their usage across the design system</p>

          <div class="color-grid">
            <div class="color-group">
              <h3>Primary Colors</h3>
              <div class="color-swatches">
                <div class="color-swatch primary-blue">
                  <div class="color-info">
                    <strong>#4F46E5</strong>
                    <span>Primary Blue</span>
                  </div>
                </div>
                <div class="color-swatch primary-purple">
                  <div class="color-info">
                    <strong>#7C3AED</strong>
                    <span>Primary Purple</span>
                  </div>
                </div>
                <div class="color-swatch accent-orange">
                  <div class="color-info">
                    <strong>#FB7C1E</strong>
                    <span>Accent Orange</span>
                  </div>
                </div>
              </div>
            </div>

            <div class="color-group">
              <h3>Status Colors</h3>
              <div class="color-swatches">
                <div class="color-swatch success-green">
                  <div class="color-info">
                    <strong>#10B981</strong>
                    <span>Success</span>
                  </div>
                </div>
                <div class="color-swatch warning-yellow">
                  <div class="color-info">
                    <strong>#F59E0B</strong>
                    <span>Warning</span>
                  </div>
                </div>
                <div class="color-swatch error-red">
                  <div class="color-info">
                    <strong>#EF4444</strong>
                    <span>Error</span>
                  </div>
                </div>
              </div>
            </div>

            <div class="color-group">
              <h3>Neutral Colors</h3>
              <div class="color-swatches">
                <div class="color-swatch gray-900">
                  <div class="color-info">
                    <strong>#111827</strong>
                    <span>Gray 900</span>
                  </div>
                </div>
                <div class="color-swatch gray-600">
                  <div class="color-info">
                    <strong>#6B7280</strong>
                    <span>Gray 600</span>
                  </div>
                </div>
                <div class="color-swatch gray-100">
                  <div class="color-info">
                    <strong>#F3F4F6</strong>
                    <span>Gray 100</span>
                  </div>
                </div>
                <div class="color-swatch white">
                  <div class="color-info">
                    <strong>#FFFFFF</strong>
                    <span>White</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Buttons Section -->
    <section id="buttons" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">Buttons</h2>
          <p class="showcase-description">Button styles and variations used throughout the site</p>

          <div class="button-examples">
            <div class="button-group">
              <h3>Primary Buttons</h3>
              <div class="button-row">
                <button class="btn btn-primary">Primary Button</button>
                <button class="btn btn-primary btn-lg">Large Primary</button>
                <button class="btn btn-primary" disabled>Disabled</button>
                <button class="btn btn-primary btn-loading">
                  <i class="fas fa-spinner fa-spin"></i>
                  Loading...
                </button>
              </div>
            </div>

            <div class="button-group">
              <h3>Secondary Buttons</h3>
              <div class="button-row">
                <button class="btn btn-secondary">Secondary Button</button>
                <button class="btn btn-secondary btn-lg">Large Secondary</button>
                <button class="btn btn-secondary" disabled>Disabled</button>
              </div>
            </div>

            <div class="button-group">
              <h3>Outline Buttons</h3>
              <div class="button-row">
                <button class="btn btn-outline">Outline Button</button>
                <button class="btn btn-outline btn-lg">Large Outline</button>
                <button class="btn btn-outline" disabled>Disabled</button>
              </div>
            </div>

            <div class="button-group">
              <h3>Link Buttons</h3>
              <div class="button-row">
                <a href="#" class="btn btn-link">Link Button</a>
                <a href="#" class="btn btn-link btn-lg">Large Link</a>
                <a href="#" class="btn btn-link" disabled>Disabled Link</a>
              </div>
            </div>

            <div class="button-group">
              <h3>CTA Buttons</h3>
              <div class="button-row">
                <button class="btn btn-cta">
                  <i class="fas fa-rocket"></i>
                  Get Started Free
                  <i class="fas fa-arrow-right"></i>
                </button>
                <button class="btn btn-cta-secondary">
                  <i class="fas fa-phone"></i>
                  Call Now: 0487 286 451
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Form Elements Section -->
    <section id="forms" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">Form Elements</h2>
          <p class="showcase-description">Input fields, form controls, and validation states</p>

          <div class="form-examples">
            <div class="form-group">
              <h3>Text Inputs</h3>
              <div class="form-demo">
                <div class="form-field">
                  <label for="demo-text" class="form-label">Text Input <span class="required">*</span></label>
                  <input type="text" id="demo-text" class="form-input" placeholder="Enter text here">
                </div>

                <div class="form-field">
                  <label for="demo-email" class="form-label">Email Input <span class="required">*</span></label>
                  <input type="email" id="demo-email" class="form-input valid" placeholder="example@domain.com" value="valid@email.com">
                </div>

                <div class="form-field">
                  <label for="demo-phone" class="form-label">Phone Input</label>
                  <input type="tel" id="demo-phone" class="form-input error" placeholder="0400 000 000">
                  <div class="field-error">Please enter a valid phone number</div>
                </div>
              </div>
            </div>

            <div class="form-group">
              <h3>Select & Textarea</h3>
              <div class="form-demo">
                <div class="form-field">
                  <label for="demo-select" class="form-label">Select Dropdown</label>
                  <select id="demo-select" class="form-select">
                    <option value="">Choose an option</option>
                    <option value="option1">Option 1</option>
                    <option value="option2">Option 2</option>
                    <option value="option3">Option 3</option>
                  </select>
                </div>

                <div class="form-field">
                  <label for="demo-textarea" class="form-label">Textarea</label>
                  <textarea id="demo-textarea" class="form-textarea" rows="4" placeholder="Enter your message here..."></textarea>
                </div>
              </div>
            </div>

            <div class="form-group">
              <h3>Checkboxes & Radio</h3>
              <div class="form-demo">
                <div class="checkbox-group">
                  <input type="checkbox" id="demo-check1" class="form-checkbox">
                  <label for="demo-check1">Checkbox Option 1</label>
                </div>

                <div class="checkbox-group">
                  <input type="checkbox" id="demo-check2" class="form-checkbox" checked>
                  <label for="demo-check2">Checkbox Option 2 (Checked)</label>
                </div>

                <div class="radio-group">
                  <input type="radio" id="demo-radio1" name="demo-radio" class="form-radio">
                  <label for="demo-radio1">Radio Option 1</label>
                </div>

                <div class="radio-group">
                  <input type="radio" id="demo-radio2" name="demo-radio" class="form-radio" checked>
                  <label for="demo-radio2">Radio Option 2 (Selected)</label>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Icons Section -->
    <section id="icons" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">Icons</h2>
          <p class="showcase-description">Font Awesome icons used throughout the design system</p>

          <div class="icon-examples">
            <div class="icon-group">
              <h3>Navigation Icons</h3>
              <div class="icon-grid">
                <div class="icon-item">
                  <i class="fas fa-home"></i>
                  <span>fa-home</span>
                </div>
                <div class="icon-item">
                  <i class="fas fa-rocket"></i>
                  <span>fa-rocket</span>
                </div>
                <div class="icon-item">
                  <i class="fas fa-dollar-sign"></i>
                  <span>fa-dollar-sign</span>
                </div>
                <div class="icon-item">
                  <i class="fas fa-envelope"></i>
                  <span>fa-envelope</span>
                </div>
              </div>
            </div>

            <div class="icon-group">
              <h3>Service Icons</h3>
              <div class="icon-grid">
                <div class="icon-item">
                  <i class="fas fa-search"></i>
                  <span>fa-search</span>
                </div>
                <div class="icon-item">
                  <i class="fas fa-bullhorn"></i>
                  <span>fa-bullhorn</span>
                </div>
                <div class="icon-item">
                  <i class="fas fa-laptop-code"></i>
                  <span>fa-laptop-code</span>
                </div>
                <div class="icon-item">
                  <i class="fas fa-chart-line"></i>
                  <span>fa-chart-line</span>
                </div>
              </div>
            </div>

            <div class="icon-group">
              <h3>UI Icons</h3>
              <div class="icon-grid">
                <div class="icon-item">
                  <i class="fas fa-check"></i>
                  <span>fa-check</span>
                </div>
                <div class="icon-item">
                  <i class="fas fa-times"></i>
                  <span>fa-times</span>
                </div>
                <div class="icon-item">
                  <i class="fas fa-arrow-right"></i>
                  <span>fa-arrow-right</span>
                </div>
                <div class="icon-item">
                  <i class="fas fa-spinner fa-spin"></i>
                  <span>fa-spinner</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Alert Messages -->
    <section id="alerts" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">Alert Messages</h2>
          <p class="showcase-description">Success, warning, error, and info message styles</p>

          <div class="alert-examples">
            <div class="alert alert-success">
              <div class="alert-icon">
                <i class="fas fa-check-circle"></i>
              </div>
              <div class="alert-content">
                <strong>Success!</strong> Your message has been sent successfully.
              </div>
            </div>

            <div class="alert alert-warning">
              <div class="alert-icon">
                <i class="fas fa-exclamation-triangle"></i>
              </div>
              <div class="alert-content">
                <strong>Warning!</strong> Please check your form inputs.
              </div>
            </div>

            <div class="alert alert-error">
              <div class="alert-icon">
                <i class="fas fa-exclamation-circle"></i>
              </div>
              <div class="alert-content">
                <strong>Error!</strong> Something went wrong. Please try again.
              </div>
            </div>

            <div class="alert alert-info">
              <div class="alert-icon">
                <i class="fas fa-info-circle"></i>
              </div>
              <div class="alert-content">
                <strong>Info:</strong> This is an informational message.
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Section Components -->
    <section id="hero" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">Hero Section</h2>
          <p class="showcase-description">Main landing page hero with headline, description, and CTA</p>
        </div>
      </div>
      <div class="component-demo">
        <HeroSection />
      </div>
    </section>

    <section id="trusted-by" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">Trust Signals & Counters</h2>
          <p class="showcase-description">Animated counters and trust indicators</p>
        </div>
      </div>
      <div class="component-demo">
        <TrustedBySection />
      </div>
    </section>

    <section id="proof" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">Social Proof</h2>
          <p class="showcase-description">Client testimonials and case studies</p>
        </div>
      </div>
      <div class="component-demo">
        <ProofSection />
      </div>
    </section>

    <section id="services" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">Services Section</h2>
          <p class="showcase-description">Service offerings with cards and descriptions</p>
        </div>
      </div>
      <div class="component-demo">
        <ServicesSection />
      </div>
    </section>

    <section id="process" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">Process Steps</h2>
          <p class="showcase-description">Step-by-step workflow visualization</p>
        </div>
      </div>
      <div class="component-demo">
        <ProcessSection />
      </div>
    </section>

    <section id="pricing" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">Pricing Section</h2>
          <p class="showcase-description">Pricing plans and packages</p>
        </div>
      </div>
      <div class="component-demo">
        <PricingSection />
      </div>
    </section>

    <section id="faq" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">FAQ Section</h2>
          <p class="showcase-description">Expandable frequently asked questions</p>
        </div>
      </div>
      <div class="component-demo">
        <FAQSection />
      </div>
    </section>

    <section id="contact" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">Contact Section</h2>
          <p class="showcase-description">Contact form and information</p>
        </div>
      </div>
      <div class="component-demo">
        <ContactSection />
      </div>
    </section>

    <section id="footer" class="showcase-section">
      <div class="container">
        <div class="showcase-item">
          <h2 class="showcase-heading">Footer Section</h2>
          <p class="showcase-description">Site footer with links and contact info</p>
        </div>
      </div>
      <div class="component-demo">
        <FooterSection />
      </div>
    </section>

    <!-- Usage Guidelines -->
    <section class="usage-guidelines section">
      <div class="container">
        <h2 class="section-title">Usage Guidelines</h2>
        <div class="guidelines-grid">
          <div class="guideline-card">
            <h3>Typography</h3>
            <ul>
              <li>Use Inter font family for all text</li>
              <li>Maintain consistent line heights</li>
              <li>Stick to the defined font weights</li>
              <li>Use proper heading hierarchy</li>
            </ul>
          </div>

          <div class="guideline-card">
            <h3>Colors</h3>
            <ul>
              <li>Use primary colors for main CTAs</li>
              <li>Apply status colors for form validation</li>
              <li>Maintain sufficient contrast ratios</li>
              <li>Test colors for accessibility</li>
            </ul>
          </div>

          <div class="guideline-card">
            <h3>Spacing</h3>
            <ul>
              <li>Use consistent margin/padding scales</li>
              <li>Follow the 8px grid system</li>
              <li>Maintain breathing room between elements</li>
              <li>Align elements to the baseline grid</li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Showcase-specific styles -->
  <style>
    /* Showcase Page Styles */
    .showcase-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 3rem 0;
      text-align: center;
    }

    .showcase-title {
      font-size: 2.5rem;
      font-weight: 800;
      margin-bottom: 1rem;
    }

    .showcase-subtitle {
      font-size: 1.125rem;
      opacity: 0.9;
      margin-bottom: 1.5rem;
    }

    .showcase-meta {
      display: flex;
      justify-content: center;
      gap: 2rem;
      font-size: 0.875rem;
      opacity: 0.8;
    }

    /* Table of Contents */
    .toc-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
    }

    .toc-list {
      list-style: none;
      padding: 0;
    }

    .toc-list li {
      margin-bottom: 0.5rem;
    }

    .toc-list a {
      color: #4f46e5;
      text-decoration: none;
      transition: color 0.2s;
    }

    .toc-list a:hover {
      color: #3730a3;
      text-decoration: underline;
    }

    /* Showcase Sections */
    .showcase-section {
      padding: 4rem 0;
      border-bottom: 1px solid #e5e7eb;
    }

    .showcase-item {
      margin-bottom: 3rem;
    }

    .showcase-heading {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      color: #111827;
    }

    .showcase-description {
      color: #6b7280;
      font-size: 1.125rem;
      margin-bottom: 2rem;
    }

    .component-demo {
      border: 2px dashed #d1d5db;
      border-radius: 0.5rem;
      margin: 2rem 0;
      overflow: hidden;
    }

    /* Typography Examples */
    .typography-examples {
      space-y: 2rem;
    }

    .typography-item {
      margin-bottom: 2rem;
      padding: 1.5rem;
      background: #f9fafb;
      border-radius: 0.5rem;
      border-left: 4px solid #4f46e5;
    }

    .typography-item code {
      display: block;
      margin-top: 0.5rem;
      font-size: 0.875rem;
      color: #6b7280;
      background: #f3f4f6;
      padding: 0.25rem 0.5rem;
      border-radius: 0.25rem;
    }

    .example-h1 {
      font-size: 3rem;
      font-weight: 800;
      color: #111827;
      margin-bottom: 1rem;
    }

    .example-h2 {
      font-size: 2.25rem;
      font-weight: 700;
      color: #111827;
      margin-bottom: 0.75rem;
    }

    .example-h3 {
      font-size: 1.875rem;
      font-weight: 600;
      color: #111827;
      margin-bottom: 0.5rem;
    }

