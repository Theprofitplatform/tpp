---
// Simple Components Showcase for Cloudflare deployment
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Design System Playground — The Profit Platform Interactive Style Guide">
  <Fragment slot="head">
    <meta name="title" content="Design System Playground — The Profit Platform Interactive Style Guide">
    <meta name="description" content="Interactive design system playground with component states, theming, responsive previews, and accessibility documentation.">
    <meta name="robots" content="noindex, nofollow">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/styles/github.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/highlight.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/languages/css.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/languages/javascript.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/clipboard@2/dist/clipboard.min.js"></script>
  </Fragment>

  <a href="#main-content" class="skip-link">Skip to main content</a>

  <header class="ds-header" id="ds-header">
    <div class="container">
      <div class="header-content">
        <div class="header-brand">
          <div class="brand-icon">
            <i class="fas fa-palette"></i>
          </div>
          <div class="brand-text">
            <h1 class="brand-title">Design System</h1>
            <span class="brand-subtitle">v2.0.0</span>
          </div>
        </div>

        <div class="search-container">
          <div class="search-wrapper">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Search components..." id="global-search" autocomplete="off">
            <div class="search-results" id="search-results"></div>
          </div>
        </div>

        <div class="header-controls">
          <div class="control-group">
            <label class="control-label">Theme</label>
            <div class="theme-switcher">
              <button class="theme-btn active" data-theme="light" title="Light Mode">
                <i class="fas fa-sun"></i>
              </button>
              <button class="theme-btn" data-theme="dark" title="Dark Mode">
                <i class="fas fa-moon"></i>
              </button>
              <button class="theme-btn" data-theme="compare" title="Side by Side">
                <i class="fas fa-columns"></i>
              </button>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">Viewport</label>
            <div class="viewport-switcher">
              <button class="viewport-btn active" data-viewport="desktop" title="Desktop">
                <i class="fas fa-desktop"></i>
              </button>
              <button class="viewport-btn" data-viewport="tablet" title="Tablet">
                <i class="fas fa-tablet-alt"></i>
              </button>
              <button class="viewport-btn" data-viewport="mobile" title="Mobile">
                <i class="fas fa-mobile-alt"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <nav class="ds-sidebar" id="ds-sidebar">
    <div class="sidebar-content">
      <div class="nav-section">
        <div class="nav-section-header">
          <h3 class="nav-section-title">
            <i class="fas fa-atom"></i>
            <span>Design Tokens</span>
          </h3>
        </div>
        <div class="nav-links">
          <a href="#colors" class="nav-link">
            <span class="link-icon"><i class="fas fa-palette"></i></span>
            <span class="link-text">Colors</span>
            <span class="link-badge">12</span>
          </a>
          <a href="#typography" class="nav-link">
            <span class="link-icon"><i class="fas fa-font"></i></span>
            <span class="link-text">Typography</span>
            <span class="link-badge">6</span>
          </a>
        </div>
      </div>

      <div class="nav-section">
        <div class="nav-section-header">
          <h3 class="nav-section-title">
            <i class="fas fa-cubes"></i>
            <span>Components</span>
          </h3>
        </div>
        <div class="nav-links">
          <a href="#buttons" class="nav-link">
            <span class="link-icon"><i class="fas fa-hand-pointer"></i></span>
            <span class="link-text">Buttons</span>
            <span class="link-badge">8</span>
            <span class="update-badge">Updated</span>
          </a>
          <a href="#forms" class="nav-link">
            <span class="link-icon"><i class="fas fa-edit"></i></span>
            <span class="link-text">Form Elements</span>
            <span class="link-badge">12</span>
          </a>
        </div>
      </div>
    </div>
  </nav>

  <main class="ds-main" id="main-content">
    <div class="main-content">
      <section class="welcome-section">
        <div class="welcome-content">
          <div class="welcome-header">
            <h1 class="welcome-title">Design System Playground</h1>
            <p class="welcome-subtitle">
              Interactive component library with live previews, multiple states,
              responsive testing, and accessibility documentation.
            </p>
            <div class="welcome-stats">
              <div class="stat">
                <span class="stat-number">45+</span>
                <span class="stat-label">Components</span>
              </div>
              <div class="stat">
                <span class="stat-number">120+</span>
                <span class="stat-label">Variants</span>
              </div>
              <div class="stat">
                <span class="stat-number">AA</span>
                <span class="stat-label">WCAG Compliant</span>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section id="colors" class="component-section" data-category="tokens">
        <div class="section-header">
          <div class="section-title-group">
            <h2 class="section-title">
              <span class="title-icon"><i class="fas fa-palette"></i></span>
              Color System
            </h2>
            <div class="section-badges">
              <span class="badge badge-token">Design Token</span>
              <span class="badge badge-accessible">WCAG AA</span>
            </div>
          </div>
          <p class="section-description">
            Carefully crafted color palette optimized for accessibility and brand consistency.
          </p>
        </div>

        <div class="component-preview">
          <div class="preview-container">
            <div class="color-grid">
              <div class="color-group">
                <h3 class="group-title">Primary Colors</h3>
                <div class="color-swatches">
                  <div class="color-swatch" data-color="#2c86f9">
                    <div class="swatch-color" style="background: #2c86f9;"></div>
                    <div class="swatch-info">
                      <div class="swatch-name">Primary Blue</div>
                      <div class="swatch-value">#2c86f9</div>
                      <div class="swatch-contrast">
                        <span class="contrast-ratio">4.8:1</span>
                        <span class="contrast-badge aa">AA</span>
                      </div>
                    </div>
                    <div class="swatch-actions">
                      <button class="swatch-btn" data-action="copy" data-value="#2c86f9" title="Copy Color">
                        <i class="fas fa-copy"></i>
                      </button>
                    </div>
                  </div>

                  <div class="color-swatch" data-color="#1e6ee8">
                    <div class="swatch-color" style="background: #1e6ee8;"></div>
                    <div class="swatch-info">
                      <div class="swatch-name">Primary Dark</div>
                      <div class="swatch-value">#1e6ee8</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section id="buttons" class="component-section" data-category="components">
        <div class="section-header">
          <div class="section-title-group">
            <h2 class="section-title">
              <span class="title-icon"><i class="fas fa-hand-pointer"></i></span>
              Button Components
            </h2>
            <div class="section-badges">
              <span class="badge badge-component">Component</span>
              <span class="badge badge-interactive">Interactive</span>
            </div>
          </div>
          <p class="section-description">
            Interactive button components with multiple variants and states.
          </p>
        </div>

        <div class="component-preview">
          <div class="preview-container">
            <div class="button-playground">
              <div class="variant-group">
                <h4 class="variant-title">Button Variants</h4>
                <div class="variant-buttons">
                  <button class="btn btn-primary btn-md">Primary</button>
                  <button class="btn btn-secondary btn-md">Secondary</button>
                  <button class="btn btn-outline btn-md">Outline</button>
                  <button class="btn btn-ghost btn-md">Ghost</button>
                  <button class="btn btn-primary btn-md" disabled>Disabled</button>
                </div>
              </div>

              <div class="variant-group">
                <h4 class="variant-title">Button Sizes</h4>
                <div class="variant-buttons">
                  <button class="btn btn-primary btn-sm">Small</button>
                  <button class="btn btn-primary btn-md">Medium</button>
                  <button class="btn btn-primary btn-lg">Large</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>

  <div class="toast-container" id="toast-container"></div>

  <style>
    /* Design System Styles */
    :root {
      --ds-sidebar-width: 280px;
      --ds-header-height: 80px;
      --ds-primary: #2c86f9;
      --ds-gray-50: #f8fafc;
      --ds-gray-100: #f1f5f9;
      --ds-gray-200: #e2e8f0;
      --ds-gray-600: #475569;
      --ds-gray-700: #334155;
      --ds-gray-800: #1e293b;
      --ds-gray-900: #0f172a;
      --ds-success: #10b981;
      --ds-warning: #f59e0b;
      --ds-error: #ef4444;
      --ds-info: #3b82f6;
      --ds-radius: 0.75rem;
      --ds-radius-sm: 0.375rem;
      --ds-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
      --ds-transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      margin: 0;
      padding: 0;
      background: var(--ds-gray-50);
      overflow-x: hidden;
    }

    .skip-link {
      position: absolute;
      top: -40px;
      left: 8px;
      background: var(--ds-primary);
      color: white;
      padding: 8px 16px;
      text-decoration: none;
      border-radius: 4px;
      font-weight: 600;
      z-index: 10000;
    }

    .skip-link:focus {
      top: 8px;
    }

    .ds-header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: var(--ds-header-height);
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--ds-gray-200);
      z-index: 1000;
    }

    .header-content {
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: 100%;
      gap: 2rem;
    }

    .header-brand {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .brand-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, var(--ds-primary), var(--ds-info));
      border-radius: var(--ds-radius-sm);
      color: white;
    }

    .brand-title {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--ds-gray-900);
      margin: 0;
    }

    .brand-subtitle {
      font-size: 0.75rem;
      color: var(--ds-gray-600);
      font-weight: 500;
    }

    .search-container {
      flex: 1;
      max-width: 400px;
    }

    .search-input {
      width: 100%;
      padding: 0.75rem 1rem 0.75rem 2.5rem;
      border: 1px solid var(--ds-gray-200);
      border-radius: var(--ds-radius-sm);
      font-size: 0.875rem;
      background: white;
    }

    .search-icon {
      position: absolute;
      left: 0.875rem;
      top: 50%;
      transform: translateY(-50%);
      color: var(--ds-gray-600);
    }

    .search-wrapper {
      position: relative;
    }

    .header-controls {
      display: flex;
      align-items: center;
      gap: 1.5rem;
    }

    .control-group {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .control-label {
      font-size: 0.75rem;
      font-weight: 600;
      color: var(--ds-gray-600);
      text-transform: uppercase;
    }

    .theme-switcher,
    .viewport-switcher {
      display: flex;
      background: var(--ds-gray-100);
      border-radius: var(--ds-radius-sm);
      padding: 2px;
    }

    .theme-btn,
    .viewport-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 32px;
      background: none;
      border: none;
      border-radius: calc(var(--ds-radius-sm) - 2px);
      color: var(--ds-gray-600);
      cursor: pointer;
      transition: var(--ds-transition);
    }

    .theme-btn.active,
    .viewport-btn.active {
      background: white;
      color: var(--ds-primary);
      box-shadow: var(--ds-shadow);
    }

    .ds-sidebar {
      position: fixed;
      top: var(--ds-header-height);
      left: 0;
      width: var(--ds-sidebar-width);
      height: calc(100vh - var(--ds-header-height));
      background: white;
      border-right: 1px solid var(--ds-gray-200);
      overflow-y: auto;
      z-index: 900;
    }

    .sidebar-content {
      padding: 1.5rem 0;
    }

    .nav-section {
      margin-bottom: 2rem;
    }

    .nav-section-header {
      padding: 0 1.5rem;
      margin-bottom: 0.75rem;
    }

    .nav-section-title {
      display: flex;
      align-items: center;
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--ds-gray-700);
      margin: 0;
    }

    .nav-section-title i {
      margin-right: 0.5rem;
      color: var(--ds-gray-600);
    }

    .nav-links {
      display: flex;
      flex-direction: column;
    }

    .nav-link {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1.5rem;
      color: var(--ds-gray-700);
      text-decoration: none;
      transition: var(--ds-transition);
    }

    .nav-link:hover {
      background: var(--ds-gray-50);
      color: var(--ds-primary);
    }

    .link-text {
      flex: 1;
      font-weight: 500;
    }

    .link-badge {
      font-size: 0.75rem;
      background: var(--ds-gray-200);
      color: var(--ds-gray-600);
      padding: 0.125rem 0.5rem;
      border-radius: 1rem;
    }

    .update-badge {
      font-size: 0.625rem;
      padding: 0.125rem 0.375rem;
      border-radius: 0.25rem;
      background: var(--ds-warning);
      color: white;
      font-weight: 600;
      text-transform: uppercase;
    }

    .ds-main {
      margin-left: var(--ds-sidebar-width);
      margin-top: var(--ds-header-height);
      min-height: calc(100vh - var(--ds-header-height));
    }

    .main-content {
      padding: 2rem;
    }

    .welcome-section {
      margin-bottom: 4rem;
    }

    .welcome-content {
      background: linear-gradient(135deg, var(--ds-primary), var(--ds-info));
      border-radius: var(--ds-radius);
      padding: 3rem;
      color: white;
      text-align: center;
    }

    .welcome-title {
      font-size: 3rem;
      font-weight: 800;
      margin: 0 0 1rem 0;
    }

    .welcome-subtitle {
      font-size: 1.25rem;
      margin: 0 0 2rem 0;
      opacity: 0.9;
    }

    .welcome-stats {
      display: flex;
      justify-content: center;
      gap: 3rem;
    }

    .stat {
      text-align: center;
    }

    .stat-number {
      display: block;
      font-size: 2rem;
      font-weight: 800;
      margin-bottom: 0.25rem;
    }

    .stat-label {
      font-size: 0.875rem;
      opacity: 0.8;
    }

    .component-section {
      margin-bottom: 4rem;
      background: white;
      border-radius: var(--ds-radius);
      overflow: hidden;
      box-shadow: var(--ds-shadow);
    }

    .section-header {
      padding: 2rem;
      border-bottom: 1px solid var(--ds-gray-100);
    }

    .section-title-group {
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      margin-bottom: 1rem;
    }

    .section-title {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-size: 2rem;
      font-weight: 700;
      color: var(--ds-gray-900);
      margin: 0;
    }

    .title-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 48px;
      height: 48px;
      background: var(--ds-gray-100);
      border-radius: var(--ds-radius-sm);
      color: var(--ds-primary);
    }

    .section-badges {
      display: flex;
      gap: 0.5rem;
    }

    .badge {
      font-size: 0.75rem;
      padding: 0.25rem 0.75rem;
      border-radius: var(--ds-radius-sm);
      font-weight: 600;
      text-transform: uppercase;
    }

    .badge-token {
      background: var(--ds-gray-100);
      color: var(--ds-gray-700);
    }

    .badge-accessible {
      background: var(--ds-success);
      color: white;
    }

    .badge-component {
      background: var(--ds-info);
      color: white;
    }

    .badge-interactive {
      background: var(--ds-warning);
      color: white;
    }

    .section-description {
      color: var(--ds-gray-600);
      font-size: 1.125rem;
      line-height: 1.6;
      margin: 0;
    }

    .component-preview {
      padding: 2rem;
    }

    .preview-container {
      border: 1px solid var(--ds-gray-200);
      border-radius: var(--ds-radius-sm);
      overflow: hidden;
    }

    .color-grid {
      padding: 2rem;
    }

    .color-group {
      margin-bottom: 2rem;
    }

    .group-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--ds-gray-900);
      margin: 0 0 1rem 0;
    }

    .color-swatches {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: 1rem;
    }

    .color-swatch {
      background: white;
      border: 1px solid var(--ds-gray-200);
      border-radius: var(--ds-radius-sm);
      overflow: hidden;
    }

    .swatch-color {
      height: 80px;
    }

    .swatch-info {
      padding: 1rem;
    }

    .swatch-name {
      font-weight: 600;
      color: var(--ds-gray-900);
      margin-bottom: 0.25rem;
    }

    .swatch-value {
      font-family: 'Monaco', monospace;
      font-size: 0.875rem;
      color: var(--ds-gray-600);
      margin-bottom: 0.5rem;
    }

    .swatch-contrast {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .contrast-ratio {
      font-size: 0.75rem;
      color: var(--ds-gray-600);
    }

    .contrast-badge.aa {
      font-size: 0.625rem;
      padding: 0.125rem 0.375rem;
      border-radius: 0.25rem;
      background: var(--ds-success);
      color: white;
      font-weight: 600;
    }

    .swatch-actions {
      display: flex;
      padding: 0.5rem 1rem 1rem;
    }

    .swatch-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 32px;
      height: 32px;
      background: var(--ds-gray-100);
      border: none;
      border-radius: var(--ds-radius-sm);
      color: var(--ds-gray-600);
      cursor: pointer;
      transition: var(--ds-transition);
    }

    .swatch-btn:hover {
      background: var(--ds-primary);
      color: white;
    }

    .button-playground {
      padding: 2rem;
    }

    .variant-group {
      background: white;
      border: 1px solid var(--ds-gray-200);
      border-radius: var(--ds-radius-sm);
      padding: 1.5rem;
      margin-bottom: 2rem;
    }

    .variant-title {
      font-size: 1.125rem;
      font-weight: 600;
      color: var(--ds-gray-900);
      margin: 0 0 1rem 0;
    }

    .variant-buttons {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: var(--ds-radius-sm);
      font-weight: 600;
      font-size: 0.875rem;
      text-decoration: none;
      cursor: pointer;
      transition: var(--ds-transition);
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--ds-primary), var(--ds-info));
      color: white;
    }

    .btn-primary:hover:not(:disabled) {
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(44, 134, 249, 0.4);
    }

    .btn-secondary {
      background: var(--ds-gray-600);
      color: white;
    }

    .btn-outline {
      background: transparent;
      color: var(--ds-primary);
      border: 2px solid var(--ds-primary);
    }

    .btn-outline:hover:not(:disabled) {
      background: var(--ds-primary);
      color: white;
    }

    .btn-ghost {
      background: transparent;
      color: var(--ds-gray-600);
    }

    .btn-ghost:hover:not(:disabled) {
      background: var(--ds-gray-100);
    }

    .btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .btn-sm {
      padding: 0.5rem 1rem;
      font-size: 0.8125rem;
    }

    .btn-md {
      padding: 0.75rem 1.5rem;
      font-size: 0.875rem;
    }

    .btn-lg {
      padding: 1rem 2rem;
      font-size: 1rem;
    }

    .container {
      margin: 0 auto;
      max-width: 1280px;
      padding: 0 20px;
      width: 100%;
    }

    @media (max-width: 1024px) {
      .ds-sidebar {
        transform: translateX(-100%);
      }

      .ds-main {
        margin-left: 0;
      }

      .header-controls {
        display: none;
      }
    }

    @media (max-width: 768px) {
      .main-content {
        padding: 1rem;
      }

      .welcome-title {
        font-size: 2rem;
      }

      .welcome-stats {
        gap: 1.5rem;
      }

      .variant-buttons {
        justify-content: center;
      }
    }
  </style>

  <script>
    // Simple JavaScript for basic functionality
    class SimpleDesignSystem {
      constructor() {
        this.init();
      }

      init() {
        this.setupThemeToggle();
        this.setupViewportToggle();
        this.setupNavigation();
        this.setupCopyButtons();
      }

      setupThemeToggle() {
        document.querySelectorAll('.theme-btn').forEach(btn => {
          btn.addEventListener('click', (e) => {
            document.querySelectorAll('.theme-btn').forEach(b => b.classList.remove('active'));
            e.target.classList.add('active');
            document.documentElement.setAttribute('data-theme', e.target.dataset.theme);
          });
        });
      }

      setupViewportToggle() {
        document.querySelectorAll('.viewport-btn').forEach(btn => {
          btn.addEventListener('click', (e) => {
            document.querySelectorAll('.viewport-btn').forEach(b => b.classList.remove('active'));
            e.target.classList.add('active');

            const viewport = e.target.dataset.viewport;
            const widths = { desktop: '100%', tablet: '768px', mobile: '375px' };

            document.querySelectorAll('.preview-container').forEach(container => {
              container.style.maxWidth = widths[viewport];
              container.style.margin = viewport === 'desktop' ? '' : '0 auto';
            });
          });
        });
      }

      setupNavigation() {
        document.querySelectorAll('.nav-link').forEach(link => {
          link.addEventListener('click', (e) => {
            e.preventDefault();
            const target = document.querySelector(link.getAttribute('href'));
            if (target) {
              target.scrollIntoView({ behavior: 'smooth' });
            }
          });
        });
      }

      setupCopyButtons() {
        document.querySelectorAll('.swatch-btn[data-action="copy"]').forEach(btn => {
          btn.addEventListener('click', (e) => {
            const color = e.target.dataset.value;
            navigator.clipboard.writeText(color);
            this.showToast(`Copied ${color}!`);
          });
        });
      }

      showToast(message) {
        const toast = document.createElement('div');
        toast.className = 'toast';
        toast.textContent = message;
        toast.style.cssText = `
          position: fixed;
          bottom: 20px;
          right: 20px;
          background: var(--ds-success);
          color: white;
          padding: 1rem;
          border-radius: var(--ds-radius-sm);
          z-index: 10000;
        `;

        document.body.appendChild(toast);
        setTimeout(() => document.body.removeChild(toast), 3000);
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      new SimpleDesignSystem();
    });
  </script>
