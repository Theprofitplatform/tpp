              <span class="font-semibold">Founded 2024</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce" aria-hidden="true">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </section>

    <!-- Metrics Counter Strip -->
    <section class="py-12 md:py-16 bg-white border-b border-gray-100" aria-label="Key metrics">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto grid grid-cols-2 md:grid-cols-4 gap-8">
          <div class="text-center transform hover:scale-105 transition-transform duration-300">
