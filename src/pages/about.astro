---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <NavigationSection />

  <main id="main-content" role="main" class="min-h-screen">
    <!-- Hero with Background Image -->
    <section class="relative py-32 md:py-40 overflow-hidden">
      <!-- Background with Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-900" aria-hidden="true">
        <div class="absolute inset-0 bg-gradient-to-b from-transparent via-black/30 to-black/50"></div>
