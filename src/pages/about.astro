    <!-- Section Divider -->
    <div class="h-px bg-gradient-to-r from-transparent via-gray-200 to-transparent" aria-hidden="true"></div>

    <!-- Company Timeline -->
    <CompanyTimeline />

    <!-- Section Divider -->
    <div class="h-px bg-gradient-to-r from-transparent via-gray-200 to-transparent" aria-hidden="true"></div>

    <!-- Our Values Section -->
    <section class="py-20 md:py-32 relative bg-gradient-to-br from-gray-50 via-purple-50/30 to-pink-50/30" aria-labelledby="values-heading">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 id="values-heading" class="text-4xl md:text-5xl font-black text-center mb-16 bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">Our Core Values</h2>
          <div class="grid md:grid-cols-3 gap-8">
            <article class="group bg-white p-8 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-indigo-100">
              <div class="text-5xl mb-6 group-hover:scale-110 group-hover:rotate-12 transition-transform duration-300" aria-hidden="true">üéØ</div>
              <h3 class="text-2xl font-bold mb-4 text-gray-900">Results-Driven</h3>
              <p class="text-gray-600 leading-relaxed">
                We focus on delivering measurable results that impact your bottom line‚Äî2x more leads, higher conversion rates, and sustainable growth. No vanity metrics, just real business outcomes.
              </p>
