---
import BaseLayout from '../layouts/BaseLayout.astro';
import NavigationSection from '../components/sections/NavigationSection.astro';
import FooterSection from '../components/sections/FooterSection.astro';
---

<BaseLayout title="About Us | The Profit Platform - Sydney Digital Marketing">
  <NavigationSection />

  <main id="main-content" role="main">
    <!-- Hero Section -->
    <section class="hero-about py-20 bg-gradient-to-br from-indigo-50 via-white to-purple-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
            About The Profit Platform
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            Sydney's hungry new digital marketing expert. Founded 2024 with fresh strategies & personalised service.
          </p>
        </div>
      </div>
    </section>

    <!-- Our Story Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-5xl mx-auto">
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
              <h2 class="text-4xl font-bold mb-6">Our Story</h2>
              <p class="text-lg text-gray-600 mb-4">
                The Profit Platform was founded in 2024 with a mission to provide fresh, innovative digital marketing strategies to Sydney businesses.
              </p>
              <p class="text-lg text-gray-600 mb-4">
                We believe in personalised service, transparent communication, and delivering measurable results that drive real business growth.
              </p>
              <p class="text-lg text-gray-600">
                With over 15+ clients already seeing 2x more leads, we're proud to serve businesses across Greater Sydney including Bondi, Parramatta, Penrith, and beyond.
              </p>
            </div>
            <div class="bg-gradient-to-br from-indigo-100 to-purple-100 rounded-2xl p-12 text-center">
              <div class="space-y-8">
                <div>
                  <div class="text-5xl font-bold text-indigo-600 mb-2">15+</div>
                  <div class="text-gray-600">Active Clients</div>
                </div>
                <div>
                  <div class="text-5xl font-bold text-purple-600 mb-2">127+</div>
                  <div class="text-gray-600">5-Star Reviews</div>
                </div>
                <div>
                  <div class="text-5xl font-bold text-indigo-600 mb-2">2024</div>
                  <div class="text-gray-600">Founded</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Values Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-4xl font-bold text-center mb-12">Our Values</h2>
          <div class="grid md:grid-cols-3 gap-8">
            <div class="bg-white p-8 rounded-xl shadow-sm">
              <div class="text-4xl mb-4">üéØ</div>
              <h3 class="text-xl font-bold mb-3">Results-Driven</h3>
              <p class="text-gray-600">
                We focus on delivering measurable results that impact your bottom line, not vanity metrics.
              </p>
            </div>
            <div class="bg-white p-8 rounded-xl shadow-sm">
              <div class="text-4xl mb-4">ü§ù</div>
              <h3 class="text-xl font-bold mb-3">Transparent</h3>
              <p class="text-gray-600">
                Clear communication, honest reporting, and no hidden fees. You'll always know what you're getting.
              </p>
            </div>
            <div class="bg-white p-8 rounded-xl shadow-sm">
              <div class="text-4xl mb-4">‚ö°</div>
              <h3 class="text-xl font-bold mb-3">Innovative</h3>
              <p class="text-gray-600">
                We stay ahead of the curve with fresh strategies and cutting-edge digital marketing techniques.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-5xl mx-auto text-center">
          <h2 class="text-4xl font-bold mb-6">Meet The Team</h2>
          <p class="text-xl text-gray-600 mb-12">
            Experienced professionals dedicated to your success
          </p>
          <div class="bg-gradient-to-br from-indigo-50 to-purple-50 p-12 rounded-2xl">
            <p class="text-lg text-gray-600">
              Our team consists of experienced digital marketing specialists, SEO experts, content creators, and web developers who are passionate about helping Sydney businesses grow.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-br from-indigo-600 to-purple-600">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl font-bold text-white mb-6">Ready to Grow Your Business?</h2>
        <p class="text-xl text-indigo-100 mb-8">
          Let's discuss how we can help you achieve your goals
        </p>
        <a href="/contact" class="inline-block bg-white text-indigo-600 px-8 py-4 rounded-full font-semibold text-lg hover:bg-gray-100 transition-colors">
          Get Your Free Consultation
        </a>
      </div>
    </section>
  </main>

  <FooterSection />
</BaseLayout>