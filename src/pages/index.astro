<!-- Typing Animation CSS & Trust Section Fix -->
<style>
  /* Fix for trust section visibility */
  .trust-title {
    opacity: 1 !important;
    animation: fadeInUp 0.8s forwards !important;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Fix for section-tag jumping on mobile */
  .section-tag {
    animation: none !important;
    transform: none !important;
    transition: none !important;
  }

  /* Disable animate-on-scroll jumping on mobile */
  @media (max-width: 768px) {
    .animate-on-scroll {
      opacity: 1 !important;
      transform: none !important;
      animation: none !important;
    }

    .section-header {
      animation: none !important;
    }

    /* Ensure smooth layout without jumps */
    .services.section,
    .process.section,
    .pricing.section,
    .results.section {
      overflow-x: hidden;
    }
  }
  /* Override gradient text fill for typing animation */
  .title-gradient .typing-text {
    display: block !important;
    font-weight: 900 !important;
    font-size: inherit;
    min-height: 1.2em;
    position: relative;
    /* Override the transparent text fill from title-gradient */
    background: linear-gradient(135deg, #2c86f9 0%, #667eea 50%, #764ba2 100%) !important;
    -webkit-background-clip: text !important;
    -webkit-text-fill-color: transparent !important;
    background-clip: text !important;
    visibility: visible !important;
  }

  .typing-text::after {
    content: '|';
    position: absolute;
    /* Make cursor visible with solid color */
    color: #2c86f9;
    -webkit-text-fill-color: #2c86f9;
    font-weight: 300;
    animation: blink-caret 0.75s step-end infinite;
    margin-left: 2px;
  }

  .typing-text.typing-complete::after {
    display: none;
  }

  @keyframes blink-caret {
    from, to { opacity: 0; }
    50% { opacity: 1; }
  }

  /* Ensure title gradient spans full width and allows line breaks */
  .title-gradient {
    display: block !important;
    width: 100%;
  }

  /* Force line break on desktop */
  @media (min-width: 768px) {
    .hero-title-modern {
      max-width: 100%;
    }
    .title-line {
      display: block;
      margin-bottom: 0.2em;
    }
    .title-gradient {
      display: block;
      margin-bottom: 0.2em;
    }
    .title-highlight {
      display: block;
    }
  }

  /* Fix trust section visibility and text selection */
  .trust-signals-section {
    position: relative !important;
    opacity: 1 !important;
    z-index: 1 !important;
  }

  .trust-bg-pattern {
    z-index: -1 !important;
    pointer-events: none !important;
    opacity: 0.2 !important; /* Reduce opacity to make content more visible */
  }

  .trust-signals-section * {
    user-select: auto !important;
    -webkit-user-select: auto !important;
    -moz-user-select: auto !important;
    -ms-user-select: auto !important;
  }

  .trust-signals-section .container {
    position: relative !important;
    z-index: 2 !important;
  }

  .metric-card, .reviews-section, .client-logos {
    opacity: 1 !important;
    background: rgba(255, 255, 255, 0.98) !important;
    position: relative !important;
    z-index: 3 !important;
  }

  /* Ensure text is fully visible */
  .trust-title h2, .trust-subtitle,
  .metric-label, .metric-sublabel,
  .review-text, .badge-title, .badge-subtitle {
    opacity: 1 !important;
    color: inherit !important;
    -webkit-text-fill-color: initial !important;
  }

  /* Fix contact section text visibility */
  .contact-info-card {
    background: #ffffff !important;
    color: #1e293b !important;
  }

  .contact-info-card h3,
  .contact-info-card h4 {
    color: #1e293b !important;
    opacity: 1 !important;
  }

  .contact-info-card .contact-item {
    color: #475569 !important;
  }

  .contact-info-card .contact-item strong {
    color: #1e293b !important;
    font-weight: 600 !important;
  }

  .contact-info-card .contact-item a {
    color: #2563eb !important;
    text-decoration: none;
  }

  .contact-info-card .contact-item a:hover {
    color: #1d4ed8 !important;
    text-decoration: underline;
  }

  .contact-info-card .contact-item span {
    color: #475569 !important;
  }

  .contact-info-card .response-time {
    background: #fef3c7 !important;
    color: #92400e !important;
  }

  .contact-info-card .response-time strong {
    color: #78350f !important;
  }

  .contact-benefits h4 {
    color: #1e293b !important;
    font-weight: 600 !important;
  }

  .contact-benefits li {
    color: #475569 !important;
  }

  .contact-benefits i {
    color: #10b981 !important;
  }

  /* Fix footer contact items that have white text */
  .contact-info-footer .contact-item {
    color: rgba(255, 255, 255, 0.9) !important; /* Keep white for footer on dark background */
  }

  /* But fix the main contact section items */
  .contact[data-astro-cid-joh4gybl] .contact-item {
    color: #475569 !important;
  }
</style>

<!-- Typing Animation JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const typingElement = document.querySelector('.typing-text');
    if (typingElement) {
        const text = typingElement.getAttribute('data-text') || 'Small Business Marketing Expert';

        // Clear the text to start animation
        typingElement.textContent = '';
        typingElement.style.visibility = 'visible';

        let index = 0;

        function typeWriter() {
            if (index < text.length) {
                typingElement.textContent += text.charAt(index);
                index++;
                setTimeout(typeWriter, 80); // Type speed
            } else {
                // Remove cursor after typing
                setTimeout(() => {
                    typingElement.classList.add('typing-complete');
                }, 1000);
            }
        }

        // Start typing animation
        setTimeout(typeWriter, 800);
    }
});
</script>

