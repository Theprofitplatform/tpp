---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Index | The Profit Platform - Sydney Digital Marketing"
  description="Leading Index services in Sydney. Get results with The Profit Platform. âœ“ Proven ROI âœ“ 127+ Reviews âœ“ Free Consultation"
  bodyClass="bg-gradient-to-br from-gray-50 to-blue-50 min-h-screen"
>
  <!-- Hero Section -->
  <section
    aria-labelledby="heroHeading"
    class="hero-modern hero-section hero-gradient-mesh bg-gradient-hero"
    data-aos="fade-up"
    data-aos-delay="0"
    role="banner"
  >
    <div aria-hidden="true" class="hero-background">
      <div class="hero-gradient-mesh"></div>
      <div class="hero-floating-elements">
        <div class="floating-orb orb-1"></div>
        <div class="floating-orb orb-2"></div>
        <div class="floating-orb orb-3"></div>
      </div>
      <div class="hero-grid-overlay"></div>
    </div>

    <div class="container">
      <div class="hero-wrapper">
        <div class="hero-content-modern">
          <h1 class="hero-title-modern" data-aos="fade-up" id="heroHeading">
            <span class="title-line">Sydney's Local</span>
            <span class="title-gradient">Small Business Marketing Expert</span>
            <span class="title-highlight">Fresh Approach, Proven Methods</span>
          </h1>

          <p class="hero-subtitle-modern" data-aos="fade-up" data-aos-delay="100">
            Dominate Google searches in
            <span class="location-highlight">Bondi</span>,
            <span class="location-highlight">Parramatta</span>,
            <span class="location-highlight">Penrith</span>
            & across Greater Sydney. Founded 2024, I'm helping Sydney businesses get 2x more leads in 60 days with cutting-edge strategies.
          </p>

          <div class="hero-stats-modern" data-aos="fade-up" data-aos-delay="200">
            <div class="card-modern bg-glass p-8 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300">
              <div class="stat-icon-wrapper">
                <div class="stat-icon-bg"></div>
                <i class="fas fa-chart-line stat-icon"></i>
              </div>
              <div class="stat-content">
                <div class="stat-value">
                  <span class="counter" data-target="247">247</span>%
                </div>
                <div class="stat-label">Revenue Increase</div>
              </div>
            </div>
            <div class="card-modern bg-glass p-8 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300">
              <div class="stat-icon-wrapper">
                <div class="stat-icon-bg"></div>
                <i class="fas fa-users stat-icon"></i>
              </div>
              <div class="stat-content">
                <div class="stat-value">
                  <span class="counter" data-target="15">15</span>+
                </div>
                <div class="stat-label">Sydney Clients</div>
              </div>
            </div>
          </div>

          <div class="hero-cta-modern" data-aos="fade-up" data-aos-delay="300">
            <a class="cta-primary-modern" href="/contact">
              <span class="cta-content">
                <span class="cta-main">Claim Free $997 Audit</span>
                <span class="cta-sub">Only 5 spots left this week</span>
              </span>
              <span class="cta-arrow">
                <i class="fas fa-arrow-right"></i>
              </span>
              <div class="cta-glow"></div>
            </a>
            <a class="cta-secondary-modern" href="tel:+61487286451">
              <span class="cta-icon-pulse">
                <i class="fas fa-phone"></i>
              </span>
              <span class="cta-text">
                <span class="cta-label">Call Avi directly</span>
                <span class="cta-number">0487 286 451</span>
              </span>
            </a>
          </div>

          <div class="trust-badges-modern" data-aos="fade-up" data-aos-delay="400">
            <div class="trust-item">
              <i class="fas fa-star"></i>
              <span>4.9â˜… Rating</span>
            </div>
            <div class="trust-divider"></div>
            <div class="trust-item">
              <i class="fas fa-award"></i>
              <span>No Lock-in Contracts</span>
            </div>
          </div>
        </div>

        <div class="hero-visual-modern" data-aos="fade-left" data-aos-delay="200">
          <div class="visual-container">
            <div class="visual-frame">
              <img
                alt="Digital Marketing Dashboard showing impressive growth results"
                class="hero-dashboard-image"
                fetchpriority="high"
                loading="lazy"
                src="https://storage.googleapis.com/msgsndr/El8AYzrtJG3nVg76QPpa/media/68b56f98291670614001dfbf.png"
              />
              <div class="visual-overlay"></div>
            </div>

            <div class="floating-metric metric-1">
              <div class="metric-icon">
                <i class="fas fa-arrow-trend-up"></i>
              </div>
              <div class="metric-content">
                <div class="metric-value">2x</div>
                <div class="metric-label">More Leads</div>
              </div>
            </div>

            <div class="floating-metric metric-2">
              <div class="metric-icon">
                <i class="fas fa-user-plus"></i>
              </div>
              <div class="metric-content">
                <div class="metric-value">67</div>
                <div class="metric-label">New Leads/Month</div>
              </div>
            </div>

            <div class="floating-metric metric-3">
              <div class="metric-icon">
                <i class="fas fa-dollar-sign"></i>
              </div>
              <div class="metric-content">
                <div class="metric-value">15x</div>
                <div class="metric-label">ROI Average</div>
              </div>
            </div>
          </div>

          <div class="visual-decoration">
            <svg class="decoration-blob" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
              <path
                d="M47.3,-57.2C59.9,-47.1,67.7,-30.8,69.8,-13.8C71.9,3.2,68.3,20.9,59.5,35.1C50.7,49.3,36.7,60,21.2,64.5C5.7,69,-11.3,67.3,-26.8,61.2C-42.3,55.1,-56.3,44.6,-63.4,30.3C-70.5,16,-70.7,-2.1,-65.2,-18.1C-59.7,-34.1,-48.5,-48,-35.2,-57.9C-21.8,-67.8,-6.3,-73.7,7,-72.8C20.3,-71.9,34.7,-64.3,47.3,-57.2Z"
                fill="url(#gradient)"
                transform="translate(100 100)"
              />
              <defs>
                <linearGradient id="gradient">
                  <stop offset="0%" stop-color="#2c86f9" stop-opacity="0.3" />
                  <stop offset="100%" stop-color="#60a5fa" stop-opacity="0.1" />
                </linearGradient>
              </defs>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Success Stories Section -->
  <section aria-labelledby="results-title" class="animate-on-scroll section results" data-aos="fade-up" data-aos-delay="200" id="results">
    <div class="container">
      <header class="section-header">
        <span class="section-tag">
          <span aria-hidden="true">ðŸš€</span>
          Early Success Stories
        </span>
        <h2 class="section-title" id="results-title">
          Real Results in Just Our First Year
        </h2>
        <p class="section-subtitle">
          See what our early clients are already achieving with our fresh approach to digital marketing.
        </p>
      </header>

      <div aria-label="Client success stories" class="card-modern bg-glass p-8 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300" role="list">
        <article aria-describedby="story-1-desc" aria-labelledby="story-1-title" class="card-modern bg-glass p-8 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300" role="listitem">
          <div aria-label="Phone calls success story" class="success-badge" role="img">
            <div aria-hidden="true" class="success-icon">
              <i class="fas fa-phone"></i>
            </div>
            <span class="success-label">SUCCESS STORY</span>
          </div>

          <div aria-label="Performance comparison" class="success-before-after">
            <div class="success-before-after-row">
              <span class="label">BEFORE</span>
              <i aria-hidden="true" class="fas fa-arrow-right arrow"></i>
              <span class="label">AFTER</span>
            </div>
            <div class="success-before-after-values">
              <span aria-label="Before: 3 calls per week" class="before-value">3/week</span>
              <span aria-label="After: 8 calls per week" class="after-value">8/week</span>
            </div>
          </div>

          <div class="success-main-metric">
            <div class="success-metric-value">167%</div>
            <div class="success-metric-label">More Phone Calls</div>
          </div>

          <div class="success-details">
            <h3 id="story-1-title">Penrith Plumbing Company</h3>
            <p id="story-1-desc">
              After just 60 days of our local SEO strategy, this family plumbing business went from struggling to find customers to being fully booked with qualified leads.
            </p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- Additional inline styles for hero section -->
  <style>
    /* Hero Section Styles */
    .hero-modern {
      position: relative;
      min-height: 90vh;
      background: linear-gradient(135deg, #f8fafc 0%, #ffffff 50%, #f0f9ff 100%);
      overflow: hidden;
      padding: 180px 0 100px;
    }

    .hero-background {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 1;
    }

    .hero-gradient-mesh {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background:
        radial-gradient(circle at 20% 50%, rgba(44, 134, 249, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(96, 165, 250, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 40% 80%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
    }

    .hero-floating-elements {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
    }

    .floating-orb {
      position: absolute;
      border-radius: 50%;
      background: linear-gradient(45deg, rgba(44, 134, 249, 0.1), rgba(96, 165, 250, 0.05));
      animation: float 6s ease-in-out infinite;
    }

    .orb-1 {
      width: 100px;
      height: 100px;
      top: 20%;
      left: 10%;
      animation-delay: 0s;
    }

    .orb-2 {
      width: 150px;
      height: 150px;
      top: 60%;
      right: 15%;
      animation-delay: 2s;
    }

    .orb-3 {
      width: 80px;
      height: 80px;
      bottom: 20%;
      left: 60%;
      animation-delay: 4s;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      33% { transform: translateY(-20px) rotate(120deg); }
      66% { transform: translateY(10px) rotate(240deg); }
    }

    .hero-grid-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image:
        linear-gradient(rgba(44, 134, 249, 0.02) 1px, transparent 1px),
        linear-gradient(90deg, rgba(44, 134, 249, 0.02) 1px, transparent 1px);
      background-size: 50px 50px;
    }

    .hero-wrapper {
      position: relative;
      z-index: 2;
    }

    .hero-content-modern {
      display: grid;
      grid-template-columns: 1.1fr 0.9fr;
      gap: 80px;
      align-items: center;
    }

    .hero-title-modern {
      font-size: clamp(2.5rem, 5vw, 4rem);
      font-weight: 800;
      line-height: 1.1;
      margin-bottom: 24px;
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .title-line {
      color: var(--pp-gray-800);
      display: block;
    }

    .title-gradient {
      background: linear-gradient(135deg, var(--pp-primary), #667eea);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      display: block;
    }

    .title-highlight {
      color: var(--pp-gray-600);
      font-weight: 600;
      font-size: 0.8em;
      display: block;
    }

    .hero-subtitle-modern {
      font-size: clamp(1.1rem, 2vw, 1.25rem);
      line-height: 1.6;
      color: var(--pp-gray-600);
      margin-bottom: 32px;
    }

    .location-highlight {
      color: var(--pp-primary);
      font-weight: 600;
    }

    .hero-stats-modern {
      display: flex;
      gap: 20px;
      margin-bottom: 32px;
    }

    .card-modern {
      display: flex;
      align-items: center;
      gap: 16px;
      padding: 20px;
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(10px);
      border-radius: 16px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }

    .card-modern:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }

    .stat-icon-wrapper {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 48px;
      height: 48px;
    }

    .stat-icon-bg {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, var(--pp-primary), #667eea);
      border-radius: 12px;
      opacity: 0.1;
    }

    .stat-icon {
      position: relative;
      z-index: 1;
      color: var(--pp-primary);
      font-size: 20px;
    }

    .stat-content {
      text-align: left;
    }

    .stat-value {
      font-size: 1.5rem;
      font-weight: 800;
      color: var(--pp-black);
      line-height: 1;
    }

    .stat-label {
      font-size: 0.875rem;
      color: var(--pp-gray-600);
      font-weight: 500;
    }

    .hero-cta-modern {
      display: flex;
      gap: 16px;
      margin-bottom: 32px;
      align-items: center;
    }

    .cta-primary-modern {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 18px 32px;
      background: linear-gradient(135deg, var(--pp-primary), #667eea);
      color: white;
      text-decoration: none;
      border-radius: 12px;
      font-weight: 600;
      font-size: 1rem;
      position: relative;
      overflow: hidden;
      transition: all 0.3s ease;
    }

    .cta-primary-modern:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 40px rgba(44, 134, 249, 0.3);
    }

    .cta-content {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    .cta-main {
      font-weight: 700;
      font-size: 1rem;
    }

    .cta-sub {
      font-size: 0.875rem;
      opacity: 0.9;
      font-weight: 500;
    }

    .cta-arrow {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 32px;
      height: 32px;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 8px;
      transition: transform 0.3s ease;
    }

    .cta-primary-modern:hover .cta-arrow {
      transform: translateX(4px);
    }

    .cta-glow {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.1));
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .cta-primary-modern:hover .cta-glow {
      opacity: 1;
    }

    .cta-secondary-modern {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 16px 24px;
      background: white;
      color: var(--pp-gray-800);
      text-decoration: none;
      border-radius: 12px;
      font-weight: 600;
      border: 2px solid var(--pp-gray-200);
      transition: all 0.3s ease;
    }

    .cta-secondary-modern:hover {
      border-color: var(--pp-primary);
      background: var(--pp-primary);
      color: white;
      transform: translateY(-2px);
    }

    .cta-icon-pulse {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      background: var(--pp-primary);
      color: white;
      border-radius: 50%;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0% { box-shadow: 0 0 0 0 rgba(44, 134, 249, 0.7); }
      70% { box-shadow: 0 0 0 10px rgba(44, 134, 249, 0); }
      100% { box-shadow: 0 0 0 0 rgba(44, 134, 249, 0); }
    }

    .cta-text {
      display: flex;
      flex-direction: column;
    }

    .cta-label {
      font-size: 0.875rem;
      font-weight: 500;
      opacity: 0.8;
    }

    .cta-number {
      font-weight: 700;
      font-size: 1rem;
    }

    .trust-badges-modern {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .trust-item {
      display: flex;
      align-items: center;
      gap: 8px;
      color: var(--pp-gray-600);
      font-size: 0.875rem;
      font-weight: 500;
    }

    .trust-item i {
      color: #fbbf24;
    }

    .trust-divider {
      width: 1px;
      height: 20px;
      background: var(--pp-gray-300);
    }

    .hero-visual-modern {
      position: relative;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .visual-container {
      position: relative;
      max-width: 500px;
      width: 100%;
    }

    .visual-frame {
      position: relative;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    }

    .hero-dashboard-image {
      width: 100%;
      height: auto;
      display: block;
    }

    .visual-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(45deg, rgba(44, 134, 249, 0.1), rgba(96, 165, 250, 0.05));
    }

    .floating-metric {
      position: absolute;
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 16px 20px;
      background: white;
      border-radius: 12px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      animation: float 4s ease-in-out infinite;
    }

    .metric-1 {
      top: 20%;
      left: -20%;
      animation-delay: 0s;
    }

    .metric-2 {
      top: 60%;
      right: -15%;
      animation-delay: 1s;
    }

    .metric-3 {
      bottom: 15%;
      left: -10%;
      animation-delay: 2s;
    }

    .metric-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, var(--pp-primary), #667eea);
      color: white;
      border-radius: 10px;
    }

    .metric-content {
      text-align: left;
    }

    .metric-value {
      font-size: 1.25rem;
      font-weight: 800;
      color: var(--pp-black);
      line-height: 1;
    }

    .metric-label {
      font-size: 0.875rem;
      color: var(--pp-gray-600);
      font-weight: 500;
    }

    .visual-decoration {
      position: absolute;
      top: -20%;
      right: -30%;
      z-index: -1;
    }

    .decoration-blob {
      width: 300px;
      height: 300px;
      opacity: 0.6;
      animation: rotate 20s linear infinite;
    }

    @keyframes rotate {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }

    /* Results Section */
    .section {
      padding: 80px 0;
    }

    .section-header {
      text-align: center;
      margin-bottom: 60px;
    }

    .section-tag {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 8px 16px;
      background: rgba(44, 134, 249, 0.1);
      color: var(--pp-primary);
      border-radius: 20px;
      font-size: 0.875rem;
      font-weight: 600;
      margin-bottom: 16px;
    }

    .section-title {
      font-size: clamp(2rem, 4vw, 3rem);
      font-weight: 800;
      color: var(--pp-black);
      margin-bottom: 16px;
    }

    .section-subtitle {
      font-size: 1.125rem;
      color: var(--pp-gray-600);
      max-width: 600px;
      margin: 0 auto;
    }

    .success-badge {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 24px;
    }

    .success-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 48px;
      height: 48px;
      background: linear-gradient(135deg, #10b981, #059669);
      color: white;
      border-radius: 12px;
    }

    .success-label {
      font-size: 0.875rem;
      font-weight: 700;
      color: #10b981;
      letter-spacing: 0.05em;
    }

    .success-before-after {
      margin-bottom: 24px;
    }

    .success-before-after-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 12px;
    }

    .success-before-after-row .label {
      font-size: 0.75rem;
      font-weight: 700;
      color: var(--pp-gray-500);
      letter-spacing: 0.1em;
    }

    .success-before-after-row .arrow {
      color: var(--pp-primary);
    }

    .success-before-after-values {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .before-value {
      font-size: 1.5rem;
      font-weight: 800;
      color: #ef4444;
    }

    .after-value {
      font-size: 1.5rem;
      font-weight: 800;
      color: #10b981;
    }

    .success-main-metric {
      text-align: center;
      margin-bottom: 24px;
      padding: 24px;
      background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(5, 150, 105, 0.05));
      border-radius: 16px;
    }

    .success-metric-value {
      font-size: 3rem;
      font-weight: 900;
      color: #10b981;
      line-height: 1;
    }

    .success-metric-label {
      font-size: 1rem;
      font-weight: 600;
      color: var(--pp-gray-700);
      margin-top: 8px;
    }

    .success-details h3 {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--pp-black);
      margin-bottom: 12px;
    }

    .success-details p {
      color: var(--pp-gray-600);
      line-height: 1.6;
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
      .hero-content-modern {
        grid-template-columns: 1fr;
        gap: 60px;
        text-align: center;
      }

      .hero-stats-modern {
        justify-content: center;
      }

      .hero-cta-modern {
        justify-content: center;
        flex-wrap: wrap;
      }

      .trust-badges-modern {
        justify-content: center;
