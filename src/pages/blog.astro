---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';

const pageTitle = "Blog | The Profit Platform";
const pageDescription = "Digital marketing tips, strategies, and insights for Sydney businesses.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <link rel="stylesheet" href="/css/blog.css">

  <Header />

  <main id="main-content" role="main">
    <!-- Hero Section -->
    <section class="blog-hero">
      <div class="container">
        <div style="max-width: 900px; margin: 0 auto; text-align: center; position: relative; z-index: 10;">
          <div class="blog-hero-badge">
            <span>📚</span>
            <span class="badge-text">Digital Marketing Insights</span>
          </div>

          <h1>Marketing Wisdom.<br/>Delivered Weekly.</h1>

          <p class="blog-hero-subtitle">
            Actionable strategies, proven tactics, and real-world case studies to grow your Sydney business
          </p>

          <!-- Search Bar -->
          <div class="blog-search">
            <span class="blog-search-icon">🔍</span>
            <input type="search" placeholder="Search articles...">
          </div>

          <!-- Category Pills -->
          <div class="category-pills">
            <button class="category-pill">
              <span class="icon">📚</span>
              <span>All Posts</span>
              <span class="count">12</span>
            </button>
            <button class="category-pill">
              <span class="icon">🔍</span>
              <span>SEO Strategy</span>
              <span class="count">4</span>
            </button>
            <button class="category-pill">
              <span class="icon">🎯</span>
              <span>Google Ads</span>
              <span class="count">3</span>
            </button>
            <button class="category-pill">
              <span class="icon">💻</span>
              <span>Web Design</span>
              <span class="count">2</span>
            </button>
            <button class="category-pill">
              <span class="icon">✍️</span>
              <span>Content Marketing</span>
              <span class="count">2</span>
            </button>
            <button class="category-pill">
              <span class="icon">📈</span>
              <span>Analytics</span>
              <span class="count">1</span>
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Article -->
    <section class="featured-section">
      <div class="container">
        <div style="max-width: 1200px; margin: 0 auto;">
          <div class="featured-label">
            <span>⭐</span>
            <h2>Featured Article</h2>
          </div>

          <a href="/blog/how-to-scale-local-seo" class="featured-card">
            <div class="featured-image">
              <div class="featured-badge">Featured</div>
              <span class="emoji">🏆</span>
            </div>

            <div class="featured-content">
              <div class="featured-category">
                <span>📌</span>
                SEO Strategy
              </div>

              <h3 class="featured-title">
                How to Scale Local SEO for Multiple Locations
              </h3>

              <p class="featured-excerpt">
                A comprehensive guide to dominating local search across Sydney suburbs and beyond.
              </p>

              <div class="featured-meta">
                <div class="featured-meta-item">
                  <span class="icon">👤</span>
                  <span>Avi Sharma</span>
                </div>
                <div class="featured-meta-item">
                  <span class="icon">📅</span>
                  <span>Jan 15, 2025</span>
                </div>
                <div class="featured-meta-item">
                  <span class="icon">⏱️</span>
                  <span>12 min read</span>
                </div>
              </div>

              <div class="featured-cta">
                <span>Read Full Article</span>
                <span class="arrow">→</span>
              </div>
            </div>
          </a>
        </div>
      </div>
    </section>

    <!-- Latest Articles -->
    <section class="latest-section">
      <div class="container">
        <div style="max-width: 1200px; margin: 0 auto;">
          <div class="section-header">
            <div class="section-title">
              <h2>Latest Articles</h2>
              <p class="section-subtitle">Fresh insights to grow your business</p>
            </div>
            <div class="filter-buttons">
              <button class="filter-btn active">Latest</button>
              <button class="filter-btn">Popular</button>
            </div>
          </div>

          <div class="articles-grid">
            <!-- Article 1 -->
            <article class="article-card">
              <div class="article-image" style="background: linear-gradient(135deg, #3b82f6, #06b6d4);">
                <span class="emoji">🎯</span>
              </div>
              <div class="article-content">
                <div class="article-category">
                  <span>•</span>
                  Google Ads
                </div>
                <h3 class="article-title">5 Ways to Reduce Your Google Ads Cost</h3>
                <p class="article-excerpt">
                  Discover proven tactics to lower your cost per click while maintaining quality leads.
                </p>
                <div class="article-meta">
                  <span>📅 Jan 10, 2025</span>
                  <span>⏱️ 4 min</span>
                </div>
                <div class="article-tags">
                  <span class="article-tag">PPC</span>
                  <span class="article-tag">Cost Optimization</span>
                </div>
                <a href="#" class="article-cta">
                  <span>Read More</span>
                  <span>→</span>
                </a>
              </div>
            </article>

            <!-- Article 2 -->
            <article class="article-card">
              <div class="article-image" style="background: linear-gradient(135deg, #f97316, #ef4444);">
                <span class="emoji">⚡</span>
              </div>
              <div class="article-content">
                <div class="article-category">
                  <span>•</span>
                  Web Design
                </div>
                <h3 class="article-title">Website Speed: Why It Matters for SEO</h3>
                <p class="article-excerpt">
                  Learn how page speed affects your search rankings and what you can do about it.
                </p>
                <div class="article-meta">
                  <span>📅 Jan 8, 2025</span>
                  <span>⏱️ 6 min</span>
                </div>
                <div class="article-tags">
                  <span class="article-tag">Performance</span>
                  <span class="article-tag">SEO</span>
                </div>
                <a href="#" class="article-cta">
                  <span>Read More</span>
                  <span>→</span>
                </a>
              </div>
            </article>

            <!-- Article 3 -->
            <article class="article-card">
              <div class="article-image" style="background: linear-gradient(135deg, #10b981, #14b8a6);">
                <span class="emoji">✍️</span>
              </div>
              <div class="article-content">
                <div class="article-category">
                  <span>•</span>
                  Content Marketing
                </div>
                <h3 class="article-title">Content That Converts: A Practical Guide</h3>
                <p class="article-excerpt">
                  Create compelling content that turns readers into customers with these tips.
                </p>
                <div class="article-meta">
                  <span>📅 Jan 5, 2025</span>
                  <span>⏱️ 7 min</span>
                </div>
                <div class="article-tags">
                  <span class="article-tag">Copywriting</span>
                  <span class="article-tag">Conversion</span>
                </div>
                <a href="#" class="article-cta">
                  <span>Read More</span>
                  <span>→</span>
                </a>
              </div>
            </article>

            <!-- Article 4 -->
            <article class="article-card">
              <div class="article-image" style="background: linear-gradient(135deg, #6366f1, #a855f7);">
                <span class="emoji">📱</span>
              </div>
              <div class="article-content">
                <div class="article-category">
                  <span>•</span>
                  Content Marketing
                </div>
                <h3 class="article-title">Social Media Strategy for Small Business</h3>
                <p class="article-excerpt">
                  Build a social presence that drives real business results without breaking the bank.
                </p>
                <div class="article-meta">
                  <span>📅 Jan 3, 2025</span>
                  <span>⏱️ 5 min</span>
                </div>
                <div class="article-tags">
                  <span class="article-tag">Social Media</span>
                  <span class="article-tag">Strategy</span>
                </div>
                <a href="#" class="article-cta">
                  <span>Read More</span>
                  <span>→</span>
                </a>
              </div>
            </article>

            <!-- Article 5 -->
            <article class="article-card">
              <div class="article-image" style="background: linear-gradient(135deg, #eab308, #f97316);">
                <span class="emoji">📊</span>
              </div>
              <div class="article-content">
                <div class="article-category">
                  <span>•</span>
                  Analytics
                </div>
                <h3 class="article-title">Understanding Your Marketing Analytics</h3>
                <p class="article-excerpt">
                  Make data-driven decisions with this beginner's guide to marketing metrics.
                </p>
                <div class="article-meta">
                  <span>📅 Dec 28, 2024</span>
                  <span>⏱️ 8 min</span>
                </div>
                <div class="article-tags">
                  <span class="article-tag">Analytics</span>
                  <span class="article-tag">Data</span>
                </div>
                <a href="#" class="article-cta">
                  <span>Read More</span>
                  <span>→</span>
                </a>
              </div>
            </article>

            <!-- Article 6 -->
            <article class="article-card">
              <div class="article-image" style="background: linear-gradient(135deg, #ec4899, #f43f5e);">
                <span class="emoji">🔎</span>
              </div>
              <div class="article-content">
                <div class="article-category">
                  <span>•</span>
                  SEO Strategy
                </div>
                <h3 class="article-title">Keyword Research Made Simple</h3>
                <p class="article-excerpt">
                  Find the right keywords to target for your Sydney business with this step-by-step guide.
                </p>
                <div class="article-meta">
                  <span>📅 Dec 25, 2024</span>
                  <span>⏱️ 6 min</span>
                </div>
                <div class="article-tags">
                  <span class="article-tag">SEO</span>
                  <span class="article-tag">Keywords</span>
                </div>
                <a href="#" class="article-cta">
                  <span>Read More</span>
                  <span>→</span>
                </a>
              </div>
            </article>
          </div>

          <!-- Load More Button -->
          <div class="load-more">
            <button class="load-more-btn">Load More Articles →</button>
          </div>
        </div>
      </div>
    </section>

    <!-- Newsletter Section -->
    <section class="newsletter-section">
      <div class="newsletter-bg"></div>
      <div class="newsletter-pattern"></div>

      <div class="container">
        <div style="max-width: 900px; margin: 0 auto;">
          <div class="newsletter-content">
            <div class="newsletter-emoji">📬</div>
            <h2 class="newsletter-title">
              Never Miss an Update
            </h2>
            <p class="newsletter-subtitle">
              Join 500+ Sydney business owners getting weekly marketing insights delivered to their inbox
            </p>

            <form class="newsletter-form">
              <div class="newsletter-form-inner">
                <input type="email" name="email" placeholder="Enter your email address" required class="newsletter-input">
                <button type="submit" class="newsletter-submit">Subscribe Free →</button>
              </div>
              <p class="newsletter-disclaimer">
                ✓ No spam, ever. Unsubscribe anytime.
              </p>
            </form>

            <!-- Social Proof -->
            <div class="newsletter-stats">
              <div class="stat-item">
                <div class="stat-number">500+</div>
                <div class="stat-label">Subscribers</div>
              </div>
              <div class="stat-item">
                <div class="stat-number">50+</div>
                <div class="stat-label">Articles</div>
              </div>
              <div class="stat-item">
                <div class="stat-number">4.9★</div>
                <div class="stat-label">Average Rating</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <footer class="blog-footer">
    <div class="container">
      <p>© 2025 The Profit Platform. All rights reserved.</p>
    </div>
  </footer>
</BaseLayout>
