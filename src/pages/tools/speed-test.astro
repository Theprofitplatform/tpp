---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import ToolBadge from '../../components/ToolBadge.astro';

// Use Cloudflare Pages Function (serverless API on same domain)
const apiUrl = '';
---

<BaseLayout title="Free Website Speed Test | Lighthouse Performance Audit">
  <Header />

  <main id="main-content" role="main">
    <!-- Enhanced Hero Section -->
    <section class="speed-hero-enhanced" data-tool-name="speed-test">
      <div class="hero-background-effects">
        <div class="gradient-orb orb-1"></div>
        <div class="gradient-orb orb-2"></div>
        <div class="gradient-orb orb-3"></div>
        <div class="grid-overlay"></div>
      </div>

      <div class="container">
        <div class="speed-hero-content-new">
          <!-- Badge -->
          <div class="hero-badge">
            <span class="badge-icon">⚡</span>
            <span class="badge-text">100% Free • Powered by Lighthouse</span>
          </div>

          <!-- Main Heading -->
          <h1 class="hero-title-new">
            <span class="title-line-1">Test Your Website</span>
            <span class="title-line-2">Performance</span>
            <span class="title-accent">In Seconds</span>
          </h1>

          <!-- Subtitle -->
          <p class="hero-description-new">
            Get a complete Google Lighthouse audit with Core Web Vitals, performance scores,
            and actionable recommendations. Know exactly how fast your site loads for real users.
          </p>

          <!-- Feature Pills -->
          <div class="feature-pills-new">
            <div class="pill">
              <i class="fas fa-tachometer-alt"></i>
              <span>Core Web Vitals</span>
            </div>
            <div class="pill">
              <i class="fas fa-mobile-alt"></i>
              <span>Mobile + Desktop</span>
            </div>
            <div class="pill">
              <i class="fas fa-lightbulb"></i>
              <span>Actionable Insights</span>
            </div>
            <div class="pill">
              <i class="fas fa-chart-line"></i>
              <span>Real User Metrics</span>
            </div>
          </div>

          <!-- Trust Indicators (Honest) -->
          <div class="trust-indicators-new">
            <div class="trust-item">
              <i class="fas fa-google"></i>
              <span>Google Lighthouse</span>
            </div>
            <div class="trust-item">
              <i class="fas fa-bolt"></i>
              <span>Instant Results</span>
            </div>
            <div class="trust-item">
              <i class="fas fa-shield-alt"></i>
              <span>Detailed Reports</span>
            </div>
          </div>

          <!-- Scroll Indicator -->
          <div class="scroll-indicator">
            <span class="scroll-text">Start testing your speed ↓</span>
            <div class="scroll-arrow">
              <i class="fas fa-chevron-down"></i>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Speed Test Tool -->
    <section class="speed-test-section">
      <div class="container">
        <div class="test-card">
          <form id="speedTestForm" class="test-form">
            <div class="form-group-large">
              <label for="url">
                <i class="fas fa-globe"></i>
                Enter Your Website URL
              </label>
              <div class="input-with-button">
                <input
                  type="url"
                  id="url"
                  name="url"
                  placeholder="https://yourwebsite.com"
                  required
                />
                <button type="submit" class="btn btn-primary btn-lg" id="testButton">
                  <i class="fas fa-bolt"></i>
                  Analyze Speed
                </button>
              </div>
              <small>Enter the full URL including https://</small>
            </div>
          </form>

          <!-- Loading State -->
          <div id="loadingState" class="loading-state" style="display: none;">
            <div class="loading-animation">
              <div class="lighthouse-beam"></div>
              <div class="lighthouse-icon">
                <i class="fas fa-chart-line"></i>
              </div>
            </div>
            <p class="loading-text" id="loadingText">Running Lighthouse audit...</p>
            <p class="loading-subtext" id="loadingSubtext">This may take 30-60 seconds</p>
            <div class="loading-progress">
              <div class="progress-step active" data-step="1">
                <i class="fas fa-download"></i>
                <span>Loading page</span>
              </div>
              <div class="progress-step" data-step="2">
                <i class="fas fa-mobile-alt"></i>
                <span>Testing mobile</span>
              </div>
              <div class="progress-step" data-step="3">
                <i class="fas fa-desktop"></i>
                <span>Testing desktop</span>
              </div>
              <div class="progress-step" data-step="4">
                <i class="fas fa-chart-bar"></i>
                <span>Analyzing metrics</span>
              </div>
              <div class="progress-step" data-step="5">
                <i class="fas fa-check"></i>
                <span>Complete</span>
              </div>
            </div>
            <div class="progress-bar">
              <div class="progress-fill" id="progressFill"></div>
            </div>
          </div>

          <!-- Error State -->
          <div id="errorState" class="error-state" style="display: none;">
            <i class="fas fa-exclamation-circle"></i>
            <h3>Oops! Something went wrong</h3>
            <p id="errorMessage"></p>
            <div class="error-actions">
              <button class="btn-secondary" onclick="location.reload()">
                <i class="fas fa-redo"></i> Try Again
              </button>
              <a href="/contact" class="btn-primary">
                <i class="fas fa-comment"></i> Get Manual Audit
              </a>
            </div>
            <p class="error-help">Need help? Call us at <a href="tel:+61487286451" class="phone-link">0487 286 451</a></p>
          </div>

          <!-- Results Section -->
          <div id="resultsSection" class="results-section" style="display: none;">
            <div class="result-header">
              <h2>Performance Report</h2>
              <div class="result-actions">
                <button class="btn btn-secondary btn-sm" onclick="exportToPDF()">
                  <i class="fas fa-file-pdf"></i> Export PDF
                </button>
                <button class="btn btn-secondary btn-sm" onclick="shareResults()">
                  <i class="fas fa-share-alt"></i> Share
                </button>
                <button class="btn btn-secondary btn-sm" onclick="saveResults()">
                  <i class="fas fa-envelope"></i> Email Report
                </button>
                <button class="btn btn-secondary btn-sm" onclick="location.reload()">
                  <i class="fas fa-redo"></i> Test Another
                </button>
              </div>
            </div>

            <div id="resultContent" class="result-content">
              <!-- Results will be inserted here -->
            </div>
          </div>
        </div>

        <!-- Info Cards -->
        <div class="info-grid">
          <div class="info-card">
            <div class="info-icon">
              <i class="fas fa-tachometer-alt"></i>
            </div>
            <h3>Why Speed Matters</h3>
            <p>
              53% of mobile users abandon sites that take over 3 seconds to load.
              Faster sites rank better in Google and convert more visitors.
            </p>
          </div>

          <div class="info-card">
            <div class="info-icon">
              <i class="fas fa-search"></i>
            </div>
            <h3>Core Web Vitals</h3>
            <p>
              Google uses speed metrics (LCP, FID, CLS) as ranking factors.
              Our test shows exactly how you measure up.
            </p>
          </div>

          <div class="info-card">
            <div class="info-icon">
              <i class="fas fa-tools"></i>
            </div>
            <h3>Get Expert Help</h3>
            <p>
              Not sure how to fix the issues? Our speed optimization service
              can make your site blazing fast in days.
            </p>
          </div>
        </div>
      </div>
    </section>

  </main>
</BaseLayout>

<script define:vars={{ apiUrl }}>
  // Analytics tracking (inline version)
  function trackEvent(eventName, params = {}) {
    if (typeof window !== 'undefined' && window.gtag) {
      window.gtag('event', eventName, params);
    }
    if (typeof window !== 'undefined' && window.fbq) {
      if (eventName === 'tool_started') {
        window.fbq('track', 'InitiateCheckout', { content_name: 'Speed Test' });
      } else if (eventName === 'cta_clicked') {
        window.fbq('track', 'Lead', { value: 500, currency: 'AUD' });
      }
    }
  }

  // Revenue calculator (simplified inline version)
  function calculateSpeedImpact(speedScore) {
    const visitors = 5000; // Conservative estimate
    const avgConversion = 0.04; // 4% for local business
    const avgOrderValue = 350; // AUD

    const secondsDelay = speedScore >= 90 ? 0.5 : (100 - speedScore) / 10;
    const conversionLossPercent = Math.min(secondsDelay * 7, 70);

    const actualConversionRate = avgConversion * (1 - conversionLossPercent / 100);
    const optimalConversionRate = avgConversion;

    const lostConversions = visitors * (optimalConversionRate - actualConversionRate);
    const monthlyLoss = lostConversions * avgOrderValue;

    return {
      monthlyLoss: Math.round(monthlyLoss),
      yearlyLoss: Math.round(monthlyLoss * 12),
      lostConversions: Math.round(lostConversions),
      conversionLossPercent: Math.round(conversionLossPercent),
      secondsDelay: secondsDelay.toFixed(1),
      severity: speedScore < 50 ? 'critical' : speedScore < 75 ? 'warning' : 'info'
    };
  }

  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('speedTestForm');
    const loadingState = document.getElementById('loadingState');
    const errorState = document.getElementById('errorState');
    const resultsSection = document.getElementById('resultsSection');
    const resultContent = document.getElementById('resultContent');
    const errorMessage = document.getElementById('errorMessage');
    const testButton = document.getElementById('testButton');

    let progressInterval;
    let currentResults = null;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const urlInput = document.getElementById('url');
      let url = urlInput.value.trim();

      // Add https:// if not present
      if (!url.startsWith('http://') && !url.startsWith('https://')) {
        url = 'https://' + url;
        urlInput.value = url;
      }

      // Track tool usage
      trackEvent('tool_started', {
        tool_name: 'Speed Test',
        url_tested: url,
        timestamp: Date.now()
      });

      // Hide all states
      form.style.display = 'none';
      errorState.style.display = 'none';
      resultsSection.style.display = 'none';
      loadingState.style.display = 'block';
      testButton.disabled = true;

      // Animate progress steps with detailed messages
      startEnhancedProgressAnimation();

      try {
        const response = await fetch(`${apiUrl}/api/speed-test`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ url, strategy: 'mobile' })
        });

        // Check if response is JSON
        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
          throw new Error('Speed test API is not yet available. Please contact us for a manual speed audit.');
        }

        const data = await response.json();

        if (!response.ok || !data.success) {
          throw new Error(data.error || 'Failed to run speed test');
        }

        // Show results
        clearInterval(progressInterval);
        currentResults = data.data;
        loadingState.style.display = 'none';
        resultsSection.style.display = 'block';
        displayResults(data.data);

      } catch (error) {
        console.error('Speed test error:', error);
        clearInterval(progressInterval);
        loadingState.style.display = 'none';
        errorState.style.display = 'block';
        errorMessage.textContent = error.message || 'Unable to run speed test. Please try again.';
      } finally {
        testButton.disabled = false;
      }
    });

    function startEnhancedProgressAnimation() {
      const steps = document.querySelectorAll('.progress-step');
      const loadingText = document.getElementById('loadingText');
      const loadingSubtext = document.getElementById('loadingSubtext');
      const progressFill = document.getElementById('progressFill');
      let currentStep = 0;

      const messages = [
        { text: 'Analyzing page structure...', subtext: 'Loading your website', progress: 20 },
        { text: 'Testing mobile performance...', subtext: 'Running Lighthouse on mobile', progress: 40 },
        { text: 'Testing desktop performance...', subtext: 'Running Lighthouse on desktop', progress: 60 },
        { text: 'Analyzing Core Web Vitals...', subtext: 'Calculating metrics and opportunities', progress: 80 },
        { text: 'Finalizing report...', subtext: 'Preparing your detailed analysis', progress: 95 }
      ];

      progressInterval = setInterval(() => {
        if (currentStep < steps.length) {
          steps[currentStep].classList.add('active');
          if (messages[currentStep]) {
            loadingText.textContent = messages[currentStep].text;
            loadingSubtext.textContent = messages[currentStep].subtext;
            progressFill.style.width = messages[currentStep].progress + '%';
          }
          currentStep++;
        }
      }, 8000); // Each step after 8s
    }

    function displayResults(data) {
      const {
        url, scores, metrics, performanceGrade, opportunities,
        coreWebVitals, deviceComparison, benchmarks, recommendations
      } = data;

      // Calculate revenue impact
      const revenueImpact = calculateSpeedImpact(scores.performance);

      // Track results viewed
      trackEvent('tool_completed', {
        tool_name: 'Speed Test',
        performance_score: scores.performance,
        severity: revenueImpact.severity
      });

      let html = `
        <!-- Score Cards -->
        <div class="score-cards">
          <div class="score-card main-score score-${performanceGrade.grade.toLowerCase()}">
            <div class="score-icon">
              <div class="score-circle">
                <svg viewBox="0 0 100 100">
                  <circle cx="50" cy="50" r="45" fill="none" stroke="#e5e7eb" stroke-width="8"/>
                  <circle cx="50" cy="50" r="45" fill="none" stroke="${performanceGrade.color}"
                    stroke-width="8" stroke-dasharray="${scores.performance * 2.83} 283"
                    transform="rotate(-90 50 50)"/>
                </svg>
                <div class="score-value">${scores.performance}</div>
              </div>
            </div>
            <div class="score-info">
              <h3>Performance Score</h3>
              <div class="score-grade">
                <span class="grade-letter">${performanceGrade.grade}</span>
                <span class="grade-label">${performanceGrade.label}</span>
              </div>
            </div>
          </div>

          <div class="score-card">
            <div class="score-mini">${scores.accessibility}</div>
            <div class="score-label">Accessibility</div>
          </div>

          <div class="score-card">
            <div class="score-mini">${scores.bestPractices}</div>
            <div class="score-label">Best Practices</div>
          </div>

          <div class="score-card">
            <div class="score-mini">${scores.seo}</div>
            <div class="score-label">SEO</div>
          </div>
        </div>

        <!-- Mobile vs Desktop Comparison -->
        ${deviceComparison ? `
        <div class="device-comparison-section">
          <h3><i class="fas fa-mobile-alt"></i> Device Performance Comparison</h3>
          <div class="device-comparison-grid">
            <div class="device-score ${deviceComparison.mobile >= 75 ? 'good' : deviceComparison.mobile >= 50 ? 'fair' : 'poor'}">
              <div class="device-icon">
                <i class="fas fa-mobile-alt"></i>
              </div>
              <div class="device-label">Mobile</div>
              <div class="device-value">${deviceComparison.mobile}</div>
            </div>
            <div class="comparison-arrow">
              ${deviceComparison.difference > 0 ? '<i class="fas fa-arrow-right"></i>' : '<i class="fas fa-arrows-alt-h"></i>'}
              <div class="difference ${Math.abs(deviceComparison.difference) > 10 ? 'significant' : ''}">${deviceComparison.difference > 0 ? '+' : ''}${deviceComparison.difference}</div>
            </div>
            <div class="device-score ${deviceComparison.desktop >= 75 ? 'good' : deviceComparison.desktop >= 50 ? 'fair' : 'poor'}">
              <div class="device-icon">
                <i class="fas fa-desktop"></i>
              </div>
              <div class="device-label">Desktop</div>
              <div class="device-value">${deviceComparison.desktop}</div>
            </div>
          </div>
          <p class="comparison-note"><i class="fas fa-info-circle"></i> ${deviceComparison.recommendation}</p>
        </div>
        ` : ''}

        <!-- Industry Benchmarks -->
        ${benchmarks ? `
        <div class="benchmarks-section">
          <h3><i class="fas fa-trophy"></i> Industry Comparison</h3>
          <div class="benchmark-card">
            <div class="benchmark-stat">
              <div class="benchmark-label">Your Score</div>
              <div class="benchmark-value your-score">${benchmarks.yourScore}</div>
            </div>
            <div class="benchmark-stat">
              <div class="benchmark-label">Industry Average</div>
              <div class="benchmark-value">${benchmarks.industryAverage}</div>
            </div>
            <div class="benchmark-stat">
              <div class="benchmark-label">Top Performers</div>
              <div class="benchmark-value">${benchmarks.topPerformers}</div>
            </div>
          </div>
          <div class="percentile-badge ${benchmarks.competitive ? 'competitive' : 'non-competitive'}">
            <i class="fas ${benchmarks.competitive ? 'fa-check-circle' : 'fa-exclamation-triangle'}"></i>
            ${benchmarks.percentile} - ${benchmarks.competitive ? 'Competitive Performance' : 'Improvement Needed'}
          </div>
        </div>
        ` : ''}

        <!-- Core Web Vitals (Enhanced) -->
        <div class="metrics-section core-vitals-enhanced">
          <h3><i class="fas fa-heartbeat"></i> Core Web Vitals (Google Ranking Factors)</h3>
          ${coreWebVitals ? `
          <div class="cwv-grid">
            <div class="cwv-card cwv-${coreWebVitals.lcp.rating}">
              <div class="cwv-header">
                <h4>Largest Contentful Paint (LCP)</h4>
                <div class="cwv-rating">${coreWebVitals.lcp.rating}</div>
              </div>
              <div class="cwv-value">${coreWebVitals.lcp.displayValue}</div>
              <div class="cwv-benchmark">Target: ≤ 2.5s</div>
            </div>
            <div class="cwv-card cwv-${coreWebVitals.fid.rating}">
              <div class="cwv-header">
                <h4>First Input Delay (FID)</h4>
                <div class="cwv-rating">${coreWebVitals.fid.rating}</div>
              </div>
              <div class="cwv-value">${coreWebVitals.fid.displayValue}</div>
              <div class="cwv-benchmark">Target: ≤ 200ms</div>
            </div>
            <div class="cwv-card cwv-${coreWebVitals.cls.rating}">
              <div class="cwv-header">
                <h4>Cumulative Layout Shift (CLS)</h4>
                <div class="cwv-rating">${coreWebVitals.cls.rating}</div>
              </div>
              <div class="cwv-value">${coreWebVitals.cls.displayValue}</div>
              <div class="cwv-benchmark">Target: ≤ 0.1</div>
            </div>
          </div>
          ` : `
          <div class="metrics-grid">
            ${buildMetric('Largest Contentful Paint', metrics.largestContentfulPaint, 2500, 4000, 'LCP')}
            ${buildMetric('First Contentful Paint', metrics.firstContentfulPaint, 1800, 3000, 'FCP')}
            ${buildMetric('Total Blocking Time', metrics.totalBlockingTime, 200, 600, 'TBT')}
            ${buildMetric('Cumulative Layout Shift', metrics.cumulativeLayoutShift, 0.1, 0.25, 'CLS', true)}
            ${buildMetric('Speed Index', metrics.speedIndex, 3400, 5800, 'SI')}
            ${buildMetric('Time to Interactive', metrics.timeToInteractive, 3800, 7300, 'TTI')}
          </div>
          `}
        </div>

        <!-- Opportunities with Code Examples -->
        ${opportunities && opportunities.length > 0 ? `
        <div class="opportunities-section">
          <h3><i class="fas fa-lightbulb"></i> Performance Opportunities with Fix Examples</h3>
          <p class="section-subtitle">Prioritized fixes with code you can implement today:</p>
          <div class="opportunities-list">
            ${opportunities.map(opp => `
              <div class="opportunity-item opportunity-${opp.priority || 'medium'}">
                <div class="opportunity-header">
                  <div class="opportunity-badge">
                    <span class="priority-badge priority-${opp.priority || 'medium'}">${opp.priority || 'medium'} priority</span>
                  </div>
                  <div class="opportunity-icon">
                    <i class="fas fa-bolt"></i>
                  </div>
                  <div class="opportunity-info">
                    <h4>${opp.title}</h4>
                    <p>${opp.description}</p>
                  </div>
                  <div class="opportunity-savings">
                    <div class="savings-value">${formatTime(opp.savingsMs)}</div>
                    <div class="savings-label">potential savings</div>
                  </div>
                </div>
                ${opp.codeExample ? `
                <div class="code-example-section">
                  <button class="toggle-code" onclick="toggleCode(this)">
                    <i class="fas fa-code"></i> View Fix Example
                  </button>
                  <div class="code-example" style="display: none;">
                    <pre><code>${escapeHtml(opp.codeExample)}</code></pre>
                  </div>
                </div>
                ` : ''}
              </div>
            `).join('')}
          </div>
        </div>
        ` : ''}

        <!-- Personalized Recommendations -->
        ${recommendations && recommendations.length > 0 ? `
        <div class="recommendations-section">
          <h3><i class="fas fa-magic"></i> Personalized Action Plan</h3>
          <div class="recommendations-list">
            ${recommendations.map((rec, index) => `
              <div class="recommendation-card">
                <div class="rec-number">${index + 1}</div>
                <div class="rec-content">
                  <h4>${rec.title}</h4>
                  <p>${rec.description}</p>
                  <a href="/contact?service=${rec.action}" class="rec-link">Get Help with This <i class="fas fa-arrow-right"></i></a>
                </div>
              </div>
            `).join('')}
          </div>
        </div>
        ` : ''}

        <!-- Revenue Impact Section -->
        <div class="revenue-impact-section">
          <div class="impact-card impact-${revenueImpact.severity}">
            <div class="impact-header">
              <div class="impact-icon">
                ${revenueImpact.severity === 'critical' ? '<i class="fas fa-exclamation-triangle"></i>' :
                  revenueImpact.severity === 'warning' ? '<i class="fas fa-chart-line"></i>' :
                  '<i class="fas fa-check-circle"></i>'}
              </div>
              <h3>${revenueImpact.severity === 'critical' ? '🚨 CRITICAL: Your Slow Site is Hemorrhaging Revenue' :
                  revenueImpact.severity === 'warning' ? '⚠️ Revenue Opportunity Detected' :
                  '✅ Your Speed Protects Your Revenue'}</h3>
            </div>
            <div class="impact-stats">
              <div class="impact-stat">
                <div class="stat-value">$${revenueImpact.monthlyLoss.toLocaleString()}</div>
                <div class="stat-label">${revenueImpact.severity === 'info' ? 'Protected Monthly' : 'Lost Monthly'}</div>
              </div>
              <div class="impact-stat">
                <div class="stat-value">$${revenueImpact.yearlyLoss.toLocaleString()}</div>
                <div class="stat-label">${revenueImpact.severity === 'info' ? 'Protected Yearly' : 'Lost Yearly'}</div>
              </div>
              <div class="impact-stat">
                <div class="stat-value">${revenueImpact.lostConversions}</div>
                <div class="stat-label">${revenueImpact.severity === 'info' ? 'Conversions Preserved' : 'Lost Conversions/Month'}</div>
              </div>
            </div>
            <div class="impact-message">
              ${revenueImpact.severity === 'critical' ?
                `<p><strong>Your site loads in ~${revenueImpact.secondsDelay}s</strong> - you're losing <strong>${revenueImpact.conversionLossPercent}% of potential conversions</strong>. ${Math.round((revenueImpact.secondsDelay - 2) * 20)}% of mobile users abandon before seeing your content. Every day you wait costs you <strong>$${Math.round(revenueImpact.monthlyLoss / 30).toLocaleString()}</strong>.</p>` :
                revenueImpact.severity === 'warning' ?
                `<p>Your ${revenueImpact.secondsDelay}s load time is costing you <strong>$${revenueImpact.monthlyLoss.toLocaleString()}/month</strong>. Research shows a 1-second improvement can recover 50% of this loss. Small optimizations = big revenue gains.</p>` :
                `<p>Excellent! Your fast site is protecting you from losing <strong>$${revenueImpact.monthlyLoss.toLocaleString()}/month</strong>. Maintain this speed as your site grows to keep conversion rates high.</p>`
              }
            </div>
          </div>
        </div>

        <!-- Dynamic CTA based on severity -->
        ${revenueImpact.severity === 'critical' ? `
        <div class="result-cta cta-emergency">
          <div class="cta-content">
            <div class="cta-badge">
              <i class="fas fa-bolt"></i>
              <span>EMERGENCY SPEED FIX</span>
            </div>
            <h3>Stop Losing $${Math.round(revenueImpact.monthlyLoss / 30).toLocaleString()} Per Day</h3>
            <p>Our emergency speed optimization service can fix critical issues in 24-48 hours. We guarantee 2-3x faster load times or your money back.</p>
            <div class="cta-benefits">
              <div class="benefit">
                <i class="fas fa-check"></i>
                <span>24-48 hour turnaround</span>
              </div>
              <div class="benefit">
                <i class="fas fa-check"></i>
                <span>2-3x speed improvement guaranteed</span>
