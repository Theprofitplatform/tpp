  /* Responsive */
  @media (max-width: 768px) {
    .seo-audit-hero {
      padding: 100px 0 60px;
    }

    .seo-audit-hero-content h1 {
      font-size: 2.25rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .audit-card {
      padding: 2rem 1.5rem;
    }

