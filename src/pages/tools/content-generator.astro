  }

  .content-wrapper {
    background: #f8fafc;
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .content-text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #1e293b;
    white-space: pre-wrap;
  }

  /* SEO Analysis */
  .seo-analysis {
    background: linear-gradient(135deg, #dbeafe, #bfdbfe);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .seo-analysis h3 {
    font-size: 1.5rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    color: #1e40af;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .seo-metrics {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .seo-metric {
    background: white;
    border-radius: 8px;
    padding: 1rem;
    text-align: center;
  }

  .seo-metric h4 {
    font-size: 0.9rem;
    color: #64748b;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .metric-value {
    font-size: 1.5rem;
    font-weight: 900;
    color: #1e293b;
  }

  .metric-value.good {
    color: #10b981;
  }

  .metric-value.fair {
    color: #f59e0b;
  }

