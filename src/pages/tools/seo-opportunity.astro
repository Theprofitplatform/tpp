      window.gtag('event', eventName, params);
    }
    if (typeof window !== 'undefined' && window.fbq) {
      if (eventName === 'calculator_started') {
        window.fbq('track', 'InitiateCheckout', { content_name: 'SEO Opportunity Calculator' });
