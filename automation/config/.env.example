# SEO Automation Configuration
# Copy this file to .env and fill in your API keys

# Required: Anthropic API Key (for AI content generation)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Google Search Console API (for rank tracking)
# Set up instructions: automation/AUTOMATION-SETUP-GUIDE.md
# Path to your service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=./automation/config/gsc-credentials.json

# Optional: Email Service API Keys (for automated sending)
# Only needed if you want to auto-send emails via API

# SendGrid (https://sendgrid.com/)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Mailgun (https://www.mailgun.com/)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_domain.com

# Your business information (used in generated content)
BUSINESS_NAME="The Profit Platform"
BUSINESS_PHONE="0487 286 451"
BUSINESS_EMAIL="avi@theprofitplatform.com.au"
BUSINESS_WEBSITE="https://theprofitplatform.com.au"

# Google Business Profile Review Link
# Get from: google.com/business â†’ Get more reviews
GBP_REVIEW_URL="https://g.page/r/YOUR_PLACE_ID/review"

# Automation Settings
AUTO_SEND_EMAILS=false          # Set to true to automatically send emails
AUTO_PUBLISH_CONTENT=false      # Set to true to automatically publish content
DRY_RUN=true                    # Set to false to actually execute actions
