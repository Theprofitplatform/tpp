---
/**
 * ClientLogoWall Component
 * Displays client and partner logos in a responsive grid
 * Features grayscale effect with color on hover
 *
 * Props:
 * - logos: Array of logo objects with name, image, and link
 * - title: Section title (default: "Trusted by Sydney Businesses")
 * - subtitle: Optional subtitle text
 *
 * Data structure for logos injection:
 * logos = [
 *   { name: "Company Name", image: "/images/clients/logo.png", link: "https://company.com" },
 *   ...
 * ]
 */

interface Logo {
  name: string;
  image: string;
  link?: string;
}

interface Props {
  logos?: Logo[];
  title?: string;
  subtitle?: string;
}

const {
  logos = [
    // PLACEHOLDER DATA - Using SVG placeholders until real logos are added
    { name: "Client 1", image: "", link: "#" },
    { name: "Client 2", image: "", link: "#" },
    { name: "Client 3", image: "", link: "#" },
    { name: "Client 4", image: "", link: "#" },
    { name: "Client 5", image: "", link: "#" },
    { name: "Client 6", image: "", link: "#" }
  ],
  title = "Trusted by Sydney Businesses",
  subtitle = "Delivering results for leading brands across Greater Sydney"
} = Astro.props;

// Helper function to generate SVG placeholder
const generateSVGPlaceholder = (name: string, index: number) => {
  const colors = [
    'from-indigo-500 to-purple-600',
    'from-purple-500 to-pink-600',
    'from-pink-500 to-rose-600',
    'from-blue-500 to-indigo-600',
    'from-cyan-500 to-blue-600',
    'from-teal-500 to-cyan-600'
  ];
  return colors[index % colors.length];
};
---

<section class="py-16 md:py-24 bg-gradient-to-br from-gray-50 via-indigo-50/30 to-purple-50/30" aria-labelledby="clients-heading">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2
          id="clients-heading"
          class="text-3xl md:text-4xl font-black mb-4 bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent"
        >
          {title}
        </h2>
        {subtitle && (
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>

      <!-- Logo Grid -->
      <div
        class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 items-center"
        role="list"
      >
        {logos.map((logo, index) => (
          <div
            class="logo-item group"
            role="listitem"
          >
            {logo.link ? (
              <a
                href={logo.link}
                target="_blank"
                rel="noopener noreferrer"
                class="block p-4 bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
                aria-label={`Visit ${logo.name} website`}
              >
                {logo.image ? (
                  <img
                    src={logo.image}
                    alt={`${logo.name} logo`}
                    class="w-full h-auto object-contain grayscale group-hover:grayscale-0 transition-all duration-300"
                    loading="lazy"
                    style="max-height: 60px;"
                  />
                ) : (
                  <div class={`h-16 w-full rounded-lg bg-gradient-to-br ${generateSVGPlaceholder(logo.name, index)} flex items-center justify-center text-white font-bold text-sm grayscale group-hover:grayscale-0 transition-all duration-300`}>
                    {logo.name}
                  </div>
                )}
              </a>
            ) : (
              <div
                class="block p-4 bg-white rounded-xl shadow-md"
                role="img"
                aria-label={`${logo.name} logo`}
              >
                {logo.image ? (
                  <img
                    src={logo.image}
                    alt={`${logo.name} logo`}
                    class="w-full h-auto object-contain grayscale group-hover:grayscale-0 transition-all duration-300"
                    loading="lazy"
                    style="max-height: 60px;"
                  />
                ) : (
                  <div class={`h-16 w-full rounded-lg bg-gradient-to-br ${generateSVGPlaceholder(logo.name, index)} flex items-center justify-center text-white font-bold text-sm grayscale group-hover:grayscale-0 transition-all duration-300`}>
                    {logo.name}
                  </div>
                )}
              </div>
            )}
          </div>
        ))}
      </div>

      <!-- Trust Badge -->
      <div class="mt-12 text-center">
        <div class="inline-flex items-center gap-3 px-6 py-3 bg-white rounded-full shadow-lg border border-indigo-100">
          <span class="text-2xl" aria-hidden="true">✓</span>
          <span class="text-gray-700 font-semibold">15+ Active Partnerships</span>
          <span class="text-2xl" aria-hidden="true">⭐</span>
          <span class="text-gray-700 font-semibold">127+ Five-Star Reviews</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Grayscale effect */
  .logo-item img {
    filter: grayscale(100%);
    opacity: 0.7;
    transition: filter 0.3s ease, opacity 0.3s ease, transform 0.3s ease;
  }

  .logo-item:hover img,
  .logo-item:focus-within img {
    filter: grayscale(0%);
    opacity: 1;
  }

  /* Performance optimization */
  .logo-item a,
  .logo-item div {
    will-change: transform, box-shadow;
  }

  /* Enhanced focus states for accessibility */
  .logo-item a:focus {
    outline: 3px solid #6366f1;
    outline-offset: 4px;
    border-radius: 0.75rem;
  }

  /* Ensure consistent logo container height */
  .logo-item > a,
  .logo-item > div {
    min-height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .logo-item > a,
    .logo-item > div {
      min-height: 80px;
    }
  }
</style>