---
/**
 * Blog Card Component
 * Blog post preview card with image and metadata
 *
 * @prop {string} title - Post title
 * @prop {string} excerpt - Post excerpt/description
 * @prop {Date} publishDate - Publication date
 * @prop {string} slug - Post URL slug
 * @prop {string} [imageSrc] - Post image URL
 * @prop {string} [category] - Post category
 */

import { formatDateShort } from '../utils/formatDate';

interface Props {
  title: string;
  excerpt: string;
  publishDate: Date;
  slug: string;
  imageSrc?: string;
  category?: string;
  // Legacy props for backwards compatibility
  description?: string;
  image?: {
    src: string;
    alt: string;
  };
  featured?: boolean;
}

const {
  title,
  excerpt,
  publishDate,
  slug,
  imageSrc,
  category,
  // Legacy props
  description,
  image,
  featured = false
} = Astro.props;

const finalExcerpt = excerpt || description || '';
const finalImageSrc = imageSrc || image?.src;
const finalImageAlt = image?.alt || title;
const formattedDate = formatDateShort(publishDate);
---

<article class={`blog-card ${featured ? 'featured' : ''}`}>
  <a href={`/blog/${slug}`} class="block group">
    <!-- Image -->
    {finalImageSrc ? (
      <div class="blog-card-image">
        <img
          src={finalImageSrc}
          alt={finalImageAlt}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
          loading="lazy"
        />
        <div class="blog-card-overlay"></div>
      </div>
    ) : (
      <div class="blog-card-image bg-gradient-to-br from-blue-500 to-blue-600">
        <div class="w-full h-full flex items-center justify-center text-white text-4xl font-bold">
          {title.charAt(0)}
        </div>
        <div class="blog-card-overlay"></div>
      </div>
    )}

    <!-- Category Badge -->
    {category && (
      <div class="blog-card-category">
        {category}
      </div>
    )}

    <!-- Content -->
    <div class="blog-card-content">
      <h3 class="blog-card-title group-hover:text-blue-600 transition-colors">
        {title}
      </h3>

      <p class="blog-card-description">
        {finalExcerpt}
      </p>

      <div class="blog-card-meta">
        <time datetime={publishDate.toISOString()} class="text-sm text-gray-500">
          {formattedDate}
        </time>
        <span class="blog-card-read-more">
          Read More
          <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </span>
      </div>
    </div>
  </a>
</article>

<style>
  .blog-card {
    background: white;
    border-radius: 1.25rem;
    overflow: hidden;
    box-shadow: 0 10px 25px -5px rgb(0 0 0 / 0.08), 0 8px 10px -6px rgb(0 0 0 / 0.05);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
    display: flex;
    flex-direction: column;
    border: 2px solid #e2e8f0;
  }

  .blog-card:hover {
    box-shadow: 0 20px 40px -10px rgb(0 0 0 / 0.15), 0 10px 15px -8px rgb(0 0 0 / 0.08);
    transform: translateY(-8px);
    border-color: #cbd5e1;
  }

  .blog-card.featured {
    border: 3px solid transparent;
    background: linear-gradient(white, white) padding-box,
                linear-gradient(135deg, #3B82F6, #2c86f9) border-box;
  }

  .blog-card-image {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: linear-gradient(135deg, #EFF6FF, #DBEAFE);
  }

  .blog-card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(30, 110, 232, 0.6), transparent);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .blog-card:hover .blog-card-overlay {
    opacity: 1;
  }

  .blog-card-category {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: linear-gradient(135deg, #3B82F6, #2c86f9);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
    z-index: 10;
  }

  .blog-card-content {
    padding: 2rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    background: white;
  }

  .blog-card-title {
    font-size: 1.5rem;
    font-weight: 800;
    color: #1e293b;
    margin-bottom: 1rem;
    line-height: 1.3;
    letter-spacing: -0.02em;
  }

  .blog-card-description {
    color: #64748b;
    line-height: 1.7;
    margin-bottom: 1.25rem;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    padding-top: 1.25rem;
    border-top: 2px solid #f1f5f9;
  }

  .blog-card-read-more {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    background: linear-gradient(135deg, #3B82F6, #2c86f9);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
    font-size: 0.9375rem;
    letter-spacing: 0.3px;
  }

  @media (max-width: 768px) {
    .blog-card-title {
      font-size: 1.375rem;
    }

    .blog-card-content {
      padding: 1.5rem;
    }

    .blog-card:hover {
      transform: translateY(-4px);
    }
  }
</style>