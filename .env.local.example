# ========================================
# The Profit Platform - Environment Configuration
# ========================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control


# ========================================
# REQUIRED: Anthropic Claude API
# ========================================
# Get your API key from: https://console.anthropic.com
# Used by: suburb pages, GBP posts, topic generator, link outreach, blog generation
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
# Legacy name (still supported)
CLAUDE_API_KEY=sk-ant-api03-your-key-here

# Monthly API budget in USD (for cost alerts, default: $100)
MONTHLY_API_BUDGET=100


# ========================================
# REQUIRED: Unsplash API
# ========================================
# Get your API key from: https://unsplash.com/developers
# Used by: blog post hero images
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here


# ========================================
# REQUIRED: Google Maps API
# ========================================
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Used by: Location pages map embeds
# IMPORTANT: Add HTTP referrer restrictions in Google Cloud Console
PUBLIC_GOOGLE_MAPS_API_KEY=your-maps-api-key-here


# ========================================
# OPTIONAL: Google My Business API (for automated posting)
# ========================================
# Get OAuth credentials from: https://console.cloud.google.com/apis/credentials
# Used by: Automated GMB posting (optional, can post manually)
GOOGLE_CLIENT_ID=your-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret-here
GOOGLE_REFRESH_TOKEN=your-refresh-token-here
GMB_ACCOUNT_ID=your-gmb-account-id
GMB_LOCATION_ID=your-gmb-location-id


# ========================================
# OPTIONAL: Output Directories
# ========================================
# Customize where generated content is saved
# Defaults are shown - uncomment to override

# General output directory
# OUTPUT_DIR=./automation/generated

# Suburb pages output
# SUBURB_OUTPUT_DIR=./src/content/locations

# Google Business Profile posts
# GBP_OUTPUT_DIR=./automation/generated/gbp-posts

# Link outreach emails
# OUTREACH_OUTPUT_DIR=./automation/generated/link-outreach


# ========================================
# OPTIONAL: Blog Generation
# ========================================
# Topic ID for specific blog post generation
# TOPIC_ID=5


# ========================================
# OPTIONAL: Google Business Profile Settings
# ========================================
# Number of posts to generate per week (default: 3)
POSTS_PER_WEEK=3

# Number of weeks to generate posts for (default: 4)
WEEKS_TO_GENERATE=4


# ========================================
# OPTIONAL: Logging Configuration
# ========================================
# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Enable/disable file logging (default: true)
# LOG_TO_FILE=true

# Log file rotation: daily, weekly, monthly (default: daily)
# LOG_ROTATION=daily


# ========================================
# OPTIONAL: Rate Limiting
# ========================================
# Max requests per minute to Claude API (default: 50)
# RATE_LIMIT_RPM=50

# Initial backoff delay in ms (default: 1000)
# RATE_LIMIT_BACKOFF=1000

# Max backoff delay in ms (default: 32000)
# RATE_LIMIT_MAX_BACKOFF=32000

# Max retry attempts (default: 3)
# RATE_LIMIT_MAX_RETRIES=3


# ========================================
# OPTIONAL: Cache Settings
# ========================================
# Default cache TTL in milliseconds (default: 3600000 = 1 hour)
# CACHE_TTL=3600000

# Cache directory (default: ./automation/.cache)
# CACHE_DIR=./automation/.cache


# ========================================
# OPTIONAL: Content Validation
# ========================================
# Minimum word count (default: 600)
# MIN_WORD_COUNT=600

# Maximum word count (default: 3000)
# MAX_WORD_COUNT=3000

# Minimum readability score (default: 50)
# MIN_READABILITY=50

# Maximum keyword density % (default: 3.0)
# MAX_KEYWORD_DENSITY=3.0


# ========================================
# OPTIONAL: Duplicate Detection
# ========================================
# Similarity threshold 0.0-1.0 (default: 0.70 = 70%)
# DUPLICATE_SIMILARITY_THRESHOLD=0.70

# N-gram size for similarity checking (default: 5)
# DUPLICATE_NGRAM_SIZE=5


# ========================================
# OPTIONAL: Error Handling & Monitoring
# ========================================
# Slack webhook URL for critical error alerts
# Get from: https://api.slack.com/messaging/webhooks
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email alerts (requires email service configuration)
# ALERT_EMAIL=your-email@example.com


# ========================================
# OPTIONAL: Google Search Console API
# ========================================
# For rank tracking automation
# Get credentials from: https://console.cloud.google.com

# GSC_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
# GSC_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"
# GSC_PROPERTY_URL=https://theprofitplatform.com.au


# ========================================
# OPTIONAL: Email Service (Nodemailer)
# ========================================
# For review request automation and outreach

# SMTP settings
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Sender information
# EMAIL_FROM=avi@theprofitplatform.com.au
# EMAIL_REPLY_TO=avi@theprofitplatform.com.au


# ========================================
# OPTIONAL: Production Environment
# ========================================
# For parity checking and deployment

# Production URL (default: https://theprofitplatform.com.au)
PROD_URL=https://theprofitplatform.com.au

# Local development URL (default: http://localhost:3001)
LOCAL_URL=http://localhost:3001


# ========================================
# OPTIONAL: Feature Flags
# ========================================
# Enable dry-run mode globally (default: false)
# DRY_RUN=false

# Enable verbose logging (default: false)
# VERBOSE=false

# Skip duplicate checks (default: false)
# SKIP_DUPLICATE_CHECK=false


# ========================================
# USAGE NOTES
# ========================================
#
# 1. API KEY SECURITY
#    - Never commit .env.local to Git (it's in .gitignore)
#    - Use environment variables in production (Cloudflare Pages)
#    - Rotate keys regularly
#
# 2. COST CONTROL
#    - Set MONTHLY_API_BUDGET to get alerts at 80%
#    - Use --dry-run flag to test without API calls
#    - Monitor costs: node -e "import('./automation/lib/usage-tracker.mjs').then(m => new m.UsageTracker().generateReport())"
#
# 3. TESTING
#    - Test with dry-run: node script.mjs --dry-run
#    - Check environment: node automation/lib/env-validator.mjs
#    - View logs: automation/logs/YYYY-MM-DD.log
#
# 4. DOCUMENTATION
#    - See CLAUDE.md for development workflow
#    - See automation/README.md for automation guides
#    - See scripts/screenshot-helper.md for browser automation
