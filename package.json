{
  "name": "tpp-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --host --port 3001",
    "build": "astro build && node scripts/add-trailing-slashes.mjs",
    "preview": "astro preview",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:auto": "npm run parity && npm run deploy",
    "parity": "npm run fetch:prod && npm run assets:download && npm run build && npm run parity:scan",
    "fetch:prod": "node scripts/fetch-production.mjs",
    "assets:download": "node scripts/download-assets.mjs",
    "parity:scan": "node scripts/parity-scan.mjs",
    "blog:create": "echo 'Copy src/content/blog/TEMPLATE.md to new file - see MANUAL-CONTENT-PROCESS.md'",
    "blog:check": "./scripts/core-test.sh",
    "topics:generate": "node automation/scripts/generate-topics.mjs",
    "topics:check": "node automation/scripts/check-topic-queue.mjs",
    "test:essential": "./scripts/essential-tests.sh",
    "test:core": "./scripts/core-test.sh",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:core:pw": "playwright test tests/core/",
    "test:mobile": "playwright test tests/mobile/",
    "test:pages": "playwright test tests/pages/",
    "test:blog": "playwright test tests/blog/",
    "test:report": "playwright show-report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,mjs,cjs,astro,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,mjs,cjs,astro,md,json}\""
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@astrojs/cloudflare": "12.6.9",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "astro": "^5.14.1",
    "cheerio": "1.1.2",
    "commander": "^14.0.1",
    "dataforseo-client": "^2.0.7",
    "dotenv": "^17.2.3",
    "google-ads-api": "^21.0.1",
    "google-search-results-nodejs": "^2.1.0",
    "googleapis": "^161.0.0",
    "gray-matter": "^4.0.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "terser": "^5.44.0"
  }
}
