{
  "name": "tpp-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --host --port 3001",
    "build": "astro build",
    "preview": "astro preview",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:auto": "npm run parity && npm run deploy",
    "parity": "npm run fetch:prod && npm run assets:download && npm run build && npm run parity:scan",
    "fetch:prod": "node scripts/fetch-production.mjs",
    "assets:download": "node scripts/download-assets.mjs",
    "parity:scan": "node scripts/parity-scan.mjs",
    "blog:generate": "node automation/scripts/generate-blog-post.js",
    "blog:validate": "node automation/scripts/validate-content.js",
    "blog:plagiarism": "node automation/scripts/plagiarism-check.js",
    "blog:images": "node automation/scripts/update-blog-images.mjs",
    "blog:link-map": "node automation/scripts/build-internal-link-map.mjs",
    "blog:performance": "node automation/scripts/track-performance.mjs",
    "blog:test": "npm run blog:generate && npm run blog:validate",
    "test:blog": "npx playwright test tests/blog-verification.spec.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@astrojs/cloudflare": "12.6.9",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "astro": "^5.14.1",
    "cheerio": "1.1.2",
    "dataforseo-client": "^2.0.7",
    "dotenv": "^17.2.3",
    "google-ads-api": "^21.0.1",
    "google-search-results-nodejs": "^2.1.0",
    "gray-matter": "^4.0.3",
    "nodemailer": "^7.0.6",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "playwright": "^1.55.1"
  }
}
